#<AdxTL>@(#)0.0.0.0 $Revision$
# Sage X3 supervisor
# Mask management WMMWKALL 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [26/03/2018]
A_HEURE = "13:13:02"
A_USER  = "ADMIN"
A_STAMP = "20180326131302"
Return

$TITRES
Return

$CHG_FMT
Case zoncou
 When "NBLIG"
  If [M]NBLIG=0
  Endif
Endcase
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask WMMWKALL [MWK2]
Gosub HORODAT
Local Inpbox "WMMWKALL" From GFONCTION At A_STAMP With A_WINDPREV Mask [MWK2] As [SIM_]
Grizo [MWK2]15
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [MWK2]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=112 : Y1(0)=1 : Y2(0)=21
Return

$ON_NBLIG
Onevent BEFORE_INPUT Call AS_NBLIG From W1WMMWKALL
Return

Subprog IB_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call IB_NBLIG From CNSMWKSTD
Endif
Gosub _AFF
End

Subprog AS_NBLIG
Local Decimal BASPAG
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(10704,GBOUT1) From OBJDIV
Call IB_NBLIG
Onkey 129 Titled GBOUT1 Call B1_NBLIG From W1WMMWKALL
Gosub _AFF
End

Subprog B1_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action CONSOPX
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONSOPX"
 PARMSK(1) = [M:MWK1]MFGFCY
 PARMSK(2) = [M:MWK1]WCR
 PARMSK(3) = [M:MWK1]WST
 PARMSK(4) = ""
 PARMSK(5) = ""
 PARMSK(6) = [M:MWK2]PERSTR(nolign-1)
 PARMSK(7) = [M:MWK2]PEREND(nolign-1)
 PARMSK(8) = ""
 PARMSK(9) = ""
 PARMSK(10) = "1"
 Call CONSULT_NUM(BASPAG,"OPX",PARMSK) From GCONSULT
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_PERNUMX
Onevent INIT_AREA Call D_PERNUMX(zc) From W1WMMWKALL
Return

Subprog D_PERNUMX(VALEUR)
Variable Char    VALEUR()
If varinit([M]PERNUMX,indice)=0
 VALEUR = num$([M]PERNUM(nolign-1))
Endif
Gosub _AFF
End

$ON_PERSTR
Onevent BEFORE_AREA Gosub AV_PERSTR From W1WMMWKALL
Return

$AV_PERSTR
Chgfmt [M]PERSTR(indice) With "DPcZ:"+GFMDAT
Gosub _AFF
Return

$ON_PEREND
Onevent BEFORE_AREA Gosub AV_PEREND From W1WMMWKALL
Return

$AV_PEREND
Chgfmt [M]PEREND(indice) With "DPcZ:"+GFMDAT
Gosub _AFF
Return

$ON_PERLOD
Onevent BEFORE_AREA Gosub AV_PERLOD From W1WMMWKALL
Return

$AV_PERLOD
## Action STD
Call AV_PERLOD(zc) From CNSMWKSTD
Gosub _AFF
Return

$CHG_STY
Return


