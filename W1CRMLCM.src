# Supervisor
# Mask management CRMLCM 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:59:09"
A_USER  = "ADMIN"
A_STAMP = "20180827235909"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask CRMLCM [LCMA]
Gosub HORODAT
Local Inpbox "CRMLCM" From GFONCTION At A_STAMP With A_WINDPREV Mask [LCMA] As [SIM_]
Grizo [LCMA]5
Grizo [LCMA]10
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [LCMA]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=25 : X2(0)=88 : Y1(0)=12 : Y2(0)=15
X1(1)=25 : X2(1)=88 : Y1(1)=16 : Y2(1)=17
Return

$ON_TOUSOC
Onevent AFTER_CHANGE Gosub AMM_TOUSOC From W1CRMLCM
Onevent INIT_AREA Call D_TOUSOC(zc) From W1CRMLCM
Onevent BEFORE_INPUT Call AS_TOUSOC(zc) From W1CRMLCM
Return

Subprog D_TOUSOC(VALEUR)
Variable Integer VALEUR
If varinit([M]TOUSOC,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_TOUSOC(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

$AMM_TOUSOC
Call AM_TOUSOC(zc)
If !mkstat & GOBJET
 zoncou = "TOUSOC" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_TOUSOC(VALEUR)
Variable Integer VALEUR
## Action STD
Call AM_TOUSOC(VALEUR) From FUNCRMLCM
If mkstat : GERR = 1 : GZONE = "TOUSOC" : GZNUM = 6052 : Endif
Gosub _AFF
End

$ON_SOC
Onevent CONTROL Call C_SOC(zc) From W1CRMLCM
Onevent AFTER_CHANGE Gosub AMM_SOC From W1CRMLCM
Onevent BEFORE_INPUT Call AS_SOC(zc) From W1CRMLCM
Return

Subprog AS_SOC(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_SOC(zc) From W1CRMLCM
Onkey 144 Titled GBOUTP Call P_SOC(zc) From W1CRMLCM
Onkey 146 Titled GBOUTA Call SA_SOC(zc) From W1CRMLCM
Gosub _AFF
End

Subprog C_SOC(VALEUR)
Variable Char    VALEUR()
## Action ACONTCPY
Call CONTSOC(VALEUR) From SUBAGF
If mkstat : GERR = 1 : GZONE = "SOC" : GZNUM = 1343 : Endif
If !mkstat
 ## Action %CNTOBJ
 Call CONTSEL("CPY","!",VALEUR,"",mkstat) From CONTOBJ
 If mkstat : GERR = 1 : GZONE = "SOC" : GZNUM = 1343 : Endif
 If !mkstat
  ## Action CONTCPY
  Call CONTCPY(VALEUR) From EXEFNC
  If mkstat : GERR = 1 : GZONE = "SOC" : GZNUM = 1343 : Endif
 Endif
Endif
Gosub _AFF
End

$AMM_SOC
Call AM_SOC(zc)
If !mkstat & GOBJET
 zoncou = "SOC" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_SOC(VALEUR)
Variable Char    VALEUR()
## Action SETSOC
GSOCIETE = zc
If mkstat : GERR = 1 : GZONE = "SOC" : GZNUM = 1343 : Endif
If !mkstat & evalue("dim("+clanam([M])+"ZSOC)")>indice
 [M]SOC(indice) = VALEUR
 Affzo ZSOC(indice)
Endif
Gosub _AFF
End

Subprog S_SOC(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "CPY"
PARMSK(2) = "!"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog SA_SOC(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "CPY"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_SOC(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("CPY",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZSOC
Onevent BEFORE_AREA Gosub AV_ZSOC From W1CRMLCM
