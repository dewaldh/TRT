#######################################################################################################
$ACTION
Case ACTION
  When Default
Endcase

Case GACTION
  When "YUSRFCYSEL"
    Gosub YUSRFCYSEL
Endcase
Return

$YUSRFCYSEL
Local Integer I
Local Char TEXTE(255)(1..500,1..4)
Local Char TEX(25)(500)
Local Char REQUEST(255)(0..)
Local Char NAREQ(255)(0..)

I=0
TIT(1)="Company"
TIT(2)="Site"
TIT(3)="Name"
TIT(4)="Short description"

CRITERE = "1=1"

REQUEST(0) = "SELECT DISTINCT ISNULL(G.FCY_0,F.FCYGRU_0), C.CPY_0, ISNULL(C.CPYNAM_0,'Group'), C.CPYSHO_0"
REQUEST(1) -= "FROM AUTILIS U"
REQUEST(2) -= "INNER JOIN AFCTPRF F ON U.PRFFCT_0 = F.PRFCOD_0"
REQUEST(3) -= "LEFT OUTER JOIN FACGROUP G ON F.FCYGRU_0 = G.CPY_0"
REQUEST(4) -= "LEFT OUTER JOIN FACILITY FC ON FC.FCY_0 = G.FCY_0"
REQUEST(5) -= "LEFT OUTER JOIN COMPANY C ON C.CPY_0 = FC.LEGCPY_0"
#REQUEST(6) -= "WHERE U.USR_0 = 'BHAKT' AND F.FNC_0 = 'GESYBB'"
REQUEST(6) -= "WHERE U.USR_0 = '"+GUSER+"' AND F.FNC_0 = 'GESYBB'"



For (Char FCY, Char CPY, Char NAM, Char SHO) From "5" Sql REQUEST As [YLNK]
  I += 1
  If [F:YLNK]FCY = "" : I = 0 : Break : Endif
  TEX(I)     = [F:YLNK]FCY
  TEXTE(I,1) = [F:YLNK]CPY
  TEXTE(I,2) = [F:YLNK]FCY
  TEXTE(I,3) = [F:YLNK]NAM
  TEXTE(I,4) = [F:YLNK]SHO
Next
NBTEX = I

If I = 0 Then
#  GMESSAGE = "User"-GUSER-"has no site linked"
#  GERR = 1
#  mkstat = 2
#  zonsui = "[M:YBB0]YBATFCY"
#  End
NAREQ(0) = "SELECT DISTINCT FC.FCY_0, C.CPY_0, C.CPYNAM_0, C.CPYSHO_0"
NAREQ(1) -= "FROM FACILITY FC"
NAREQ(2) -= "LEFT OUTER JOIN COMPANY C ON C.CPY_0 = FC.LEGCPY_0"
For (Char FCY, Char CPY, Char NAM, Char SHO) From "5" Sql NAREQ As [YLNK]
  I += 1
  TEX(I)     = [F:YLNK]FCY
  TEXTE(I,1) = [F:YLNK]CPY
  TEXTE(I,2) = [F:YLNK]FCY
  TEXTE(I,3) = [F:YLNK]NAM
  TEXTE(I,4) = [F:YLNK]SHO
Next
NBTEX = I

Endif

Return

