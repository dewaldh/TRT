$EXEBOUT
Local Char    SAVACT(GLONACT)
Local Integer FLGEXE
SAVACT = GACTION
Case BOUT
 When "D"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = num$([M]EMPNUM)
  PARBOUT(2) = "SFTEL"
  FLGEXE = 1
  GACTION = "TRTSFTDEF"
  Call SAISIE_CHAR(VALBOUT,PARBOUT,"SFTDEFAULT","TRTSFTD","XYTRTSFTD") From GSAISIE
 When "I"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = num$([M]EMPNUM)
  PARBOUT(2) = [M]FCY
  PARBOUT(3) = "EIR"
  FLGEXE = 1
  GACTION = "TRTSFTBRK"
  Call SAISIE_CHAR(VALBOUT,PARBOUT,"SFTBREAK","TRTSFTB","XYTRTSFTB") From GSAISIE
 When "B"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = num$([M]EMPNUM)
  PARBOUT(2) = [M]FCY
  PARBOUT(3) = "EBK"
  FLGEXE = 1
  GACTION = "TRTSFTBRK"
  Call SAISIE_CHAR(VALBOUT,PARBOUT,"SFTBREAK","TRTSFTB","XYTRTSFTB") From GSAISIE
Endcase
GACTION = SAVACT
Return

