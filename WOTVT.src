$LEC_DERLU
Read [AXX]AXX0="TABVAT";"DESAXX";GLANGUE;[F:TVT]VAT;[F:TVT]LEG
If fstat : Raz [F:AXX] : Endif
Read [AX3]AXX0="TABVAT";"SHOAXX";GLANGUE;[F:TVT]VAT;[F:TVT]LEG
If fstat : Raz [F:AX3] : Endif
Return

$CHARGE_DERLU
If clalev([F:TVT9])>0
 Read [TVT9] = [F:TVT9]A_TABI
