# Supervisor
# Mask management PPR1 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [28/08/2018]
A_HEURE = "00:08:56"
A_USER  = "ADMIN"
A_STAMP = "20180828000856"
Return

$TITRES
Return

$CHG_FMT
Case zoncou
 When "NBREN"
  If [M]NBREN=0
  Endif
Endcase
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask PPR1 [PPR1]
Gosub HORODAT
Local Inpbox "PPR1" From GFONCTION At A_STAMP With A_WINDPREV Mask [PPR1] As [SIM_]
Grizo [PPR1]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [PPR1]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=30 : X2(0)=83 : Y1(0)=7 : Y2(0)=22
Return

$ON_NBREN
Onevent CONTROL Call C_NBREN From W1PPR1
Return

Subprog C_NBREN
Local Decimal BASPAG
## Action STD
Call C_NBREN From SUBPPR
If mkstat : GERR = 1 : GZONE = "NBREN" : GZNUM = 0 : Endif
Gosub _AFF
End

$ON_PRIREN
Return

$ON_DESAXX
Onevent INIT_AREA Call D_DESAXX(zc) From W1PPR1
Onevent BEFORE_INPUT Call AS_DESAXX(zc) From W1PPR1
Onevent CONTROL Call C_DESAXX(zc) From W1PPR1
Return

Subprog IB_DESAXX(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action BOUTTEXTRA
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "BOUTTEXTRA"
 Call S_AFF_CHAR(VALEUR,PARMSK,"","ATEXTRA","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

Subprog D_DESAXX(VALEUR)
Variable Char    VALEUR()
If varinit([M]DESAXX,indice)=0
 ## Action LECTEXTRA
 Call LECTEXTRA(VALEUR,"PPREASON","DESAXX",num$(nolign),"") From ATEXTRA
Endif
Gosub _AFF
End

Subprog AS_DESAXX(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(9637,GBOUT1) From OBJDIV
Call IB_DESAXX(VALEUR)
Onkey 129 Titled GBOUT1 Call B1_DESAXX(zc) From W1PPR1
Gosub _AFF
End

Subprog C_DESAXX(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "DESAXX" : GZNUM = 8 : Endif
Gosub _AFF
End

Subprog B1_DESAXX(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action ATEXTRA
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "ATEXTRA"
 Local Char ACTION(20), PROGSUB(GLONADC), PROGSPE(GLONADC), PROGSPV(GLONADC)
 ACTION = "AB1_DESAXX" : PROGSUB = "SUBPPR" : PROGSPE = "SPEPPR" : PROGSPV = ""
 Gosub ACTSUB From GOBJSUB
 PARMSK(1) = "PPREASON"
 PARMSK(2) = "DESAXX"
 PARMSK(3) = num$(nolign)
 PARMSK(4) = ""
 Call SAISIE_CHAR(VALEUR,PARMSK,"ATEXTRA","ATEXTRA","") From GSAISIE
 ACTION = "BB1_DESAXX" : PROGSUB = "SUBPPR" : PROGSPE = "SPEPPR" : PROGSPV = ""
 Gosub ACTSUB From GOBJSUB
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_DACMAN
Onevent INIT_AREA Call D_DACMAN(zc) From W1PPR1
Onevent BEFORE_INPUT Call AS_DACMAN(zc) From W1PPR1
Return

Subprog D_DACMAN(VALEUR)
Variable Integer VALEUR
If varinit([M]DACMAN,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_DACMAN(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

