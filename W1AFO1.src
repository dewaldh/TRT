# Supervisor
# Mask management AFO1 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:48:12"
A_USER  = "ADMIN"
A_STAMP = "20180827234812"
Return

$TITRES
Return

$CHG_FMT
Case zoncou
 When "NBLIG"
  If [M]NBLIG=0
  Endif
Endcase
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask AFO1 [AFO1]
Gosub HORODAT
Local Inpbox "AFO1" From GFONCTION At A_STAMP With A_WINDPREV Mask [AFO1] As [SIM_]
Grizo [AFO1]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [AFO1]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=112 : Y1(0)=1 : Y2(0)=28
Return

$ON_NBLIG
Onevent BEFORE_INPUT Call AS_NBLIG From W1AFO1
Return

Subprog AS_NBLIG
Local Decimal BASPAG
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(49,GBOUT2) From OBJDIV
Onkey 130 Titled GBOUT2 Call B2_NBLIG From W1AFO1
Gosub _AFF
End

Subprog B2_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call B2_NBLIG From SUBAFO
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_NUMLIG
Onevent BEFORE_AREA Gosub AV_NUMLIG From W1AFO1
Return

$AV_NUMLIG
zc = nolign
Gosub _AFF
Return

$ON_CODFIC
Onevent CONTROL Call C_CODFIC(zc) From W1AFO1
Onevent BEFORE_INPUT Call AS_CODFIC(zc) From W1AFO1
Return

Subprog AS_CODFIC(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(1,GBOUT1) From OBJDIV
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey 129 Titled GBOUT1 Call B1_CODFIC(zc) From W1AFO1
Onkey   2 Titled GBOUTS Call S_CODFIC(zc) From W1AFO1
Onkey 144 Titled GBOUTP Call P_CODFIC(zc) From W1AFO1
Onkey 146 Titled GBOUTA Call SA_CODFIC(zc) From W1AFO1
Gosub _AFF
End

Subprog C_CODFIC(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "CODFIC" : GZNUM = 6 : Endif
If !mkstat
 ## Action %CNTOBJ
 Call CONTSEL("ATB","",VALEUR,"",mkstat) From CONTOBJ
 If mkstat : GERR = 1 : GZONE = "CODFIC" : GZNUM = 6 : Endif
Endif
Gosub _AFF
End

Subprog S_CODFIC(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "ATB"
PARMSK(2) = ""
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog B1_CODFIC(VALEUR)
Variable Char    VALEUR()
Call OBJET("ATB",VALEUR,"") From GOBJET
Gosub _AFF
End

Subprog SA_CODFIC(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "ATB"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_CODFIC(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("ATB",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_FORDIM
Onevent BEFORE_INPUT Call AS_FORDIM(zc) From W1AFO1
Onevent CONTROL Call C_FORDIM(zc) From W1AFO1
Return

Subprog AS_FORDIM(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(1484,GBOUT1) From OBJDIV
Call TEXTE(27108,GBOUT2) From OBJDIV
Call TEXTE(29795,GBOUT3) From OBJDIV
If !GWEBSERV
 ## Action AFRIB
 Call IB_FORMULE From AFORMULE
 If mkstat=2
  [M]FORDIM(INDIC) = VALEUR
  Affzo FORDIM(INDIC) : mkstat = 2
 Endif
Endif
Onkey 129 Titled GBOUT1 Call B1_FORDIM(zc) From W1AFO1
Onkey 130 Titled GBOUT2 Call B2_FORDIM(zc) From W1AFO1
Onkey 131 Titled GBOUT3 Call B3_FORDIM(zc) From W1AFO1
Gosub _AFF
End

Subprog C_FORDIM(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action AFRCONT
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "AFRCONT"
 PARMSK(1) = ""
 Call S_AFF_CHAR(VALEUR,PARMSK,"AFRCONT","AFORMULE","") From GACTION
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "FORDIM" : GZNUM = 4574 : Endif
Endif
Gosub _AFF
End

Subprog B1_FORDIM(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action AFRB1
 Call B1_FORMULE(VALEUR,[M]CODFIC(nolign-1),"","","","") From AFORMULE
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B2_FORDIM(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action AFFMESS
 Call AFFMESS From AFORMULE
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B3_FORDIM(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action ANAFOR
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "ANAFOR"
 PARMSK(1) = [M]CODFIC(nolign-1)
 PARMSK(2) = ""
 PARMSK(3) = ""
 PARMSK(4) = ""
 PARMSK(5) = ""
 Call TRAITE_CHAR(VALEUR,PARMSK,"","ANAFOR","ANAFOR",3,"") From GTRAITE
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_MODIF
Onevent INIT_AREA Call D_MODIF(zc) From W1AFO1
Return

Subprog D_MODIF(VALEUR)
Variable Integer VALEUR
If varinit([M]MODIF,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

$CHG_STY
Return


