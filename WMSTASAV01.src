#<AdxTL>@(#)0.0.0.0 $Revision$
# Sage X3 supervisor
# Statistical Update SAV01

Subprog MAJSTA(SIGN)
Value Integer SIGN

Local Char    CRIT1(20) , CRIT2(20) , CRIT3(20) , CRIT4(20)
Local Char    CRIT5(20) , CRIT6(20) , CRIT7(20) , CRIT8(20)
Local Char    SOCIETE(GLONCPY) , SITE(GLONFCY) , VALPAR(10)
Local Char    INTIT(50)(1..8)
Local Date    DAT
Local Decimal MONTANT(1..10)
Local Integer ISITE , ISOC , STAT , COURTYP

Gosub OUVRE

SITE    = [F:CON]SALFCY
ISITE   = find(SITE,GSITE(1..GNBSITE))
If !ISITE : End : Endif
SOCIETE = GSOCSITE(ISITE)
ISOC    = find(SOCIETE,GSOC(1..GNBSOC))
If !ISOC : End : Endif
SITE    = [F:CON]SALFCY

Gosub LIENS

If !([F:CON]CONCAT = 3)
 End
Endif

Raz CRIT1 , CRIT2 , CRIT3 , CRIT4 , CRIT5 , CRIT6 , CRIT7 , CRIT8
CRIT1 = mid$([F:CON]CONBPC,1,10)
CRIT2 = "$$$"
CRIT3 = "$$$"
CRIT4 = "$$$"
CRIT5 = "$$$"
CRIT6 = "$$$"
CRIT7 = "$$$"
CRIT8 = "$$$"

Read [BPR]BPR0 = [F:CON]CONBPC
If fstat
 INTIT(1) = mess(167,123,1) : # Divers
Else
 INTIT(1) = [F:BPR]BPRNAM
Endif

If [F:CON]CONSTRDAT=[0/0/0] : End : Endif
DAT = [F:CON]CONSTRDAT

Raz MONTANT
MONTANT(1) = [F:CON]CONAMT

Gosub CONV_DEVISE

Call MAJSTA(SIGN,"SAV01",SOCIETE,SITE,CRIT1,CRIT2,CRIT3,CRIT4,CRIT5,CRIT6,CRIT7,CRIT8,
&           INTIT,DAT,MONTANT,1) From SUBPS2

End

$OUVRE
If clalev([F:BPR])=0 : Local File BPARTNER [BPR] : Endif
If clalev([F:AIN])=0 : Local File CONTACTCRM [AIN] : Endif
If clalev([F:REP])=0 : Local File SALESREP [REP] : Endif
Return

$FERME
If clalev([F:BPR])>0 : Close Local File [BPR] : Endif
If clalev([F:AIN])>0 : Close Local File [AIN] : Endif
If clalev([F:REP])>0 : Close Local File [REP] : Endif
If clalev([F:CON])>0 : Close Local File [CON] : Endif
Return

$ZOOM
Raz [M]OBJBOU, OBJCLE, OBJSEC
If [M:STA1]NIVEAU=1
 Call TEXTE(1500,GBOUT7) From OBJDIV
 [M]OBJBOU = "BPR"
 [M]OBJCLE = [M:STA2]CLE(max(0,nolign-1))
 [M]OBJSEC = ""
Endif
Return

$LIENS
indice=0
If [F:BPR]BPRNUM<>[F:CON]CONBPC
 Read [BPR]BPR0 = [F:CON]CONBPC
 If fstat : Raz [F:BPR] : Endif
Endif
If [F:AIN]CNTNUM<>[F:CON]CONCCN
 Read [AIN]AIN0 = [F:CON]CONCCN
 If fstat : Raz [F:AIN] : Endif
Endif
If [F:REP]REPNUM<>[F:CON]SALREP
 Read [REP]REP0 = [F:CON]SALREP
 If fstat : Raz [F:REP] : Endif
Endif
Return

$CONV_DEVISE
Call PARAML(SITE,"CHGTYP",VALPAR) From ADOVAL
COURTYP = val(VALPAR)
If COURTYP=0 : COURTYP = 1 : Endif
If dim(WVERMNTNBR)<0
 Global Char WVERMNTTAB(30)(1..300)
 Global Char WVERMNTKEY(30)
 Global Decimal WVERMNTDEC(1..300)
 Global Integer WVERMNTNBR
 WVERMNTNBR = 1
Endif
Local Integer WI
WVERMNTKEY =  [F:CON]CUR
WVERMNTKEY += func TRTX2FNC_SYRA.GET_PARAM_CHAR(GACTX, CST_ALEVFOLD, GACTX.AFOLDER, "SYSCUR")
WVERMNTKEY += GDEVSOC(ISOC)
WVERMNTKEY += num$(COURTYP)
WVERMNTKEY += num$([F:CON]CONSTRDAT)
WVERMNTKEY += num$(MONTANT(1))
WI = find(WVERMNTKEY,WVERMNTTAB(1..WVERMNTNBR))
If WI
 MONTANT(1) = WVERMNTDEC(WI)
Else
 Call CONVERT([F:CON]CUR,func TRTX2FNC_SYRA.GET_PARAM_CHAR(GACTX, CST_ALEVFOLD, GACTX.AFOLDER, "SYSCUR"),GDEVSOC(ISOC),COURTYP,[F:CON]CONSTRDAT,MONTANT(1),MONTANT(1),STAT) From TRTDEV
 WVERMNTDEC(WVERMNTNBR) = MONTANT(1)
 WVERMNTTAB(WVERMNTNBR) = WVERMNTKEY
 If WVERMNTNBR>=300
  WVERMNTNBR = 1
  Raz WVERMNTDEC , WVERMNTTAB
 Else
  WVERMNTNBR += 1
 Endif
Endif
Return


