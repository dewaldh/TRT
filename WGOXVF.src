$EXEBOUT
Local Char    SAVACT(GLONACT)
Local Integer FLGEXE
SAVACT = GACTION
Case BOUT
 When "h"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = [M:XVF0]FICHE
  PARBOUT(2) = num$("0")
  PARBOUT(3) = ""
  PARBOUT(4) = [M:XVF0]REFLOT
  FLGEXE = 1
  GACTION = "XGENPATCH"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","","XGENPATCH",3,"XGENPATFIC") From GTRAITE
  [M:XVF0]REFLOT = PARBOUT(4)
Endcase
GACTION = SAVACT
Return

$EXEACT
