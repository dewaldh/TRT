For (Char YCST,Char YDES) From "5" Sql REQUEST As [YLNK]
  I += 1

  TEX(I)     = [F:YLNK]YCST
  TEXTE(I,1) = [F:YLNK]YCST
  TEXTE(I,2) = [F:YLNK]YDES
#  TEXTE(I,3) = [F:YLNK]YCOA

#  If I = 2000
