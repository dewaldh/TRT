# Supervisor
# Mask management RECOBJTXT 

Subprog SAIMSK(IMPFIC,ACTION,IMPTRT)
Value Char IMPFIC
Value Char ACTION
Value Char IMPTRT

Gosub DEFVAR

####################################
## Bloc liste 1
####################################
IMPTBL = 0

## Zone DOSSIER
mkstat = 0
zoncou = "DOSSIER"
indice = 0
If varinit([M]DOSSIER,indice)=0
 [M]DOSSIER = nomap
Endif
If varmode([M]DOSSIER,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "DOSSIER" : Gosub ACTION From =IMPTRT
 Endif
 If vireblc([M]DOSSIER,2)=""
  mkstat = 1 : GMESSAGE = mess(10,123,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "DOSSIER" : GZNUM = 10035 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
 If !mkstat
  Call CONTROLE("ADS","",[M]DOSSIER,"",mkstat) From CONTOBJ
  If mkstat : GERR = 1 : GZONE = "DOSSIER" : GZNUM = 10035 : Endif
  Gosub AFF From GSAISIE
  If mkstat : End : Endif
 Endif
Endif

####################################
## Bloc liste 2
####################################
IMPTBL = 0

## Zone TRACE
mkstat = 0
zoncou = "TRACE"
indice = 0
IMPENT = [M]TRACE
If varinit([M]TRACE,indice)=0
 IMPENT = 2
Endif
If varmode([M]TRACE,indice)=0
 [M]TRACE(indice) = IMPENT
 If !mkstat
  IMPMOD = 0 : IMPZON = "TRACE" : Gosub ACTION From =IMPTRT
  IMPENT = [M]TRACE(indice)
 Endif
Endif
[M]TRACE = IMPENT

## Zone DATDEB
mkstat = 0
zoncou = "DATDEB"
indice = 0
If varmode([M]DATDEB,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "DATDEB" : Gosub ACTION From =IMPTRT
 Endif
Endif

## Zone DATFIN
mkstat = 0
zoncou = "DATFIN"
indice = 0
If varmode([M]DATFIN,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "DATFIN" : Gosub ACTION From =IMPTRT
 Endif
 SAVACT = GACTION : GACTION = "CTLDATV"
 Call CTLDATV([M]DATFIN,[M]DATDEB) From CONTDIV
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "DATFIN" : GZNUM = 1177 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
Endif

####################################
## Bloc tableau 3
####################################
IMPTBL = 1

## Zone NBLIG
mkstat = 0
zoncou = "NBLIG"
indice = 0
status = 1
zoncou = "NBLIG"
If varmode([M]NBLIG,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "NBLIG" : Gosub ACTION From =IMPTRT
 Endif
 If !mkstat
  NBLIG = [M]NBLIG
  For nolign=1 To NBLIG
   indice = nolign-1
   [M]NBLIG = nolign
   status = 75
   Call SAI_NBLIG(IMPFIC,ACTION,IMPTRT)
   If mkstat : Break : Endif
  Next nolign
  If mkstat : End : Endif
  indice = 0
 Endif
Endif

mkstat = 0

End

####################################
## Bloc tableau 3
####################################
Subprog SAI_NBLIG(IMPFIC,ACTION,IMPTRT)
Value Char IMPFIC
Value Char ACTION
Value Char IMPTRT

Gosub DEFVAR

IMPTBL = 1

## Zone NBLIG
mkstat = 0
zoncou = "NBLIG"

## Zone OPT
mkstat = 0
zoncou = "OPT"
IMPENT = [M]OPT(indice)
If varinit([M]OPT,indice)=0
 IMPENT = 1
Endif
If varmode([M]OPT,indice)=0
 Call INICOMBO(944) From COMBOS
 SAVACT = GACTION : GACTION = "STD"
 Call AS_OPT(IMPENT) From RECOBJTXT
 GACTION = SAVACT
 If mkstat=1 : Raz IMPENT : Endif
 If IMPENT<1 | GMENLOC(IMPENT)=1
  IMPENT = find(0,GMENLOC(1..len(mess(0,944,1))))
 Endif
 [M]OPT(indice) = IMPENT
 If !mkstat
  IMPMOD = 0 : IMPZON = "OPT" : Gosub ACTION From =IMPTRT
  IMPENT = [M]OPT(indice)
 Endif
 If !mkstat
  If IMPENT>0 & IMPENT<dim(GMENLOC) & GMENLOC(IMPENT)<>0
   mkstat = 1 : GMESSAGE = mess(99,123,1)
  Endif
  If mkstat : GERR = 1 : GZONE = "OPT" : GZNUM = 906 : Endif
  Gosub AFF From GSAISIE
  If mkstat : End : Endif
 Endif
Endif
[M]OPT(indice) = IMPENT

## Zone REC
mkstat = 0
zoncou = "REC"
IMPENT = [M]REC(indice)
If varinit([M]REC,indice)=0
 IMPENT = 1
Endif
If varmode([M]REC,indice)=0
 [M]REC(indice) = IMPENT
 If !mkstat
  IMPMOD = 0 : IMPZON = "REC" : Gosub ACTION From =IMPTRT
  IMPENT = [M]REC(indice)
 Endif
Endif
[M]REC(indice) = IMPENT

## Zone NBLIG
mkstat = 0
zoncou = "NBLIG"

End

$DEFVAR
Local Integer I , J , K , XOK , NOL , IMPENT , IMPMOD , IMPTBL , NBLIG
Local Char    IMPMSK(GLONAMK) , IMPZON(GLONAVA) , NOMZONE(40)
Local Char    PROGSUB(GLONADC), PROGSPE(GLONADC), PROGSPV(GLONADC)
Local Char    PARAM(250)(1..20) , SAVACT(20)
Local Char    WCHAR(255)
Local Decimal WNUM
Local Date    WDATE
Local Clbfile WCLOB(9)

IMPMSK = "RECOBJTXT"
Return

