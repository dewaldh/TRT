# Sage X3 supervisor
# Mask management MOL3 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [26/03/2018]
A_HEURE = "12:53:37"
A_USER  = "ADMIN"
A_STAMP = "20180326125337"
Return

$TITRES
Return

$CHG_FMT
Case zoncou
 When "NBRFLD"
  If [M]NBRFLD=0
  Endif
Endcase
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask MOL3 [MOL3]
Gosub HORODAT
Local Inpbox "MOL3" From GFONCTION At A_STAMP With A_WINDPREV Mask [MOL3] As [SIM_]
Grizo [MOL3]2
Grizo [MOL3]5
Grizo [MOL3]10
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [MOL3]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=48 : Y1(0)=1 : Y2(0)=2
X1(1)=1 : X2(1)=48 : Y1(1)=3 : Y2(1)=4
X1(2)=1 : X2(2)=48 : Y1(2)=5 : Y2(2)=24
Return

$ON_CPLUPDFLG
Onevent INIT_AREA Call D_CPLUPDFLG(zc) From W1MOL3
Onevent BEFORE_INPUT Call AS_CPLUPDFLG(zc) From W1MOL3
Return

Subprog D_CPLUPDFLG(VALEUR)
Variable Integer VALEUR
If varinit([M]CPLUPDFLG,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_CPLUPDFLG(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

$ON_NBRLIG
Onevent INIT_AREA Call D_NBRLIG(zc) From W1MOL3
Onevent CONTROL Call C_NBRLIG(zc) From W1MOL3
Return

Subprog D_NBRLIG(VALEUR)
Variable Decimal VALEUR
If varinit([M]NBRLIG,indice)=0
 VALEUR = 200
Endif
Gosub _AFF
End

Subprog C_NBRLIG(VALEUR)
Variable Decimal VALEUR
## Action %OBLIG
If VALEUR=0
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "NBRLIG" : GZNUM = 56 : Endif
Gosub _AFF
End

$ON_NBRCOL
Onevent INIT_AREA Call D_NBRCOL(zc) From W1MOL3
Onevent CONTROL Call C_NBRCOL(zc) From W1MOL3
Return

Subprog D_NBRCOL(VALEUR)
Variable Decimal VALEUR
If varinit([M]NBRCOL,indice)=0
 VALEUR = 3
Endif
Gosub _AFF
End

Subprog C_NBRCOL(VALEUR)
Variable Decimal VALEUR
Gosub _AFF
End

$ON_NBRFLD
Onevent BEFORE_INPUT Call AS_NBRFLD From W1MOL3
Return

Subprog AS_NBRFLD
Local Decimal BASPAG
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(16134,GBOUT1) From OBJDIV
Call TEXTE(16134,GBOUT2) From OBJDIV
Call TEXTE(16134,GBOUT3) From OBJDIV
## Action STD
Call AS_NBRFLD From SUBMOL
Onkey 129 Titled GBOUT1 Call B1_NBRFLD From W1MOL3
Onkey 130 Titled GBOUT2 Call B2_NBRFLD From W1MOL3
Onkey 131 Titled GBOUT3 Call B3_NBRFLD From W1MOL3
Gosub _AFF
End

Subprog B1_NBRFLD
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call B1_NBRFLD From SUBMOL
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B2_NBRFLD
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call B2_NBRFLD From SUBMOL
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B3_NBRFLD
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call B3_NBRFLD From SUBMOL
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_DAC
Onevent CONTROL Call C_DAC(zc) From W1MOL3
Return

Subprog C_DAC(VALEUR)
Variable Decimal VALEUR
## Action STD
Call C_DAC(VALEUR) From SUBMOL
If mkstat : GERR = 1 : GZONE = "DAC" : GZNUM = 662 : Endif
Gosub _AFF
End

$CHG_STY
Return


