#<AdxTL>@(#)0.0.0.0 $Revision$
# Sage X3 supervisor
## LISTE ## VEN054 Unpaid Invoices

$PARAM
Local Integer PARTYP(1..99)
PARTYP(1) = 7
PARTYP(2) = 7
PARTYP(3) = 7
PARTYP(4) = 8
Return

$OUVRE
If clalev([F:DUD])=0 : Local File GACCDUDATE [DUD] : Endif
If clalev([F:SIH])=0 : Local File SINVOICE [SIH] : Endif
If clalev([F:BPC])=0 : Local File BPCUSTOMER [BPC] : Endif

Local Char AFILOPE(250)
AFILOPE = ""
If AFILOPE<>"" : AFILOPE += "," : Endif
AFILOPE += "[DUD]"
If AFILOPE<>"" : AFILOPE += "," : Endif
AFILOPE += "[SIH]"
If AFILOPE<>"" : AFILOPE += "," : Endif
AFILOPE += "[BPC]"

CRITSUP(1) = "([F:SIH]INVTYP=1)"
CRITSUP(2) = " & ([F:SIH]STA=3)"
CRITSUP(3) = " & ([F:DUD]PAYCUR+[F:DUD]TMPCUR=0)"
Gosub REMPLACE_SUP From SUBALH9

Link [DUD] With
&   [SIH]SIH0 = [DUD]NUM
& , [BPC]BPC0 ~= [SIH]BPR
& As [LNK]
& Where evalue(CRITERE) & evalue(CRITSUP)
& Order by Key CLE = [F:SIH]FCY;[F:BPC]BPCNUM;[F:SIH]NUM;[F:SIH]ACCDAT

Columns [LNK] ([F:SIH]FCY,[F:BPC]BPCNUM,[F:BPC]BPCNAM,[F:SIH]NUM,
& [F:SIH]ACCDAT,[F:SIH]AMTATI,[F:SIH]SNS,[F:SIH]CUR,[F:DUD]TYP,
& [F:DUD]NUM,[F:DUD]LIG,[F:DUD]DUDLIG)
Return

$LIENS
If dim(AFILOPE)>0 & AFILOPE<>"" : Default File AFILOPE : Endif
Default [F],[L],[S],[V],[M]
Default [L],[S],[V],[M],[F]
Return

$CONT
OKCONT = 1
Return

$DEFVAR
[L]NBGRP = 2
[L]NBCOL = 8
[L]NBLIG = 100
[L]GRP(1) = 1
[L]COLGRP = 1
[L]SNSGRP = 2
[L]GRP(2) = 2
[L]CUM(8) = 1
[L]TRI(1) = 8
[L]TRI(2) = 8
[L]TRI(3) = 6
[L]AOBSIT = "FCY"
[L]AOBACC = ""
[L]AOBFIC = "SIH"
Return

$TUNLIEN
Local Char    TLIEN(30)(1..16) , TTYP(GLONATY)(1..16)
Local Decimal TLONG(1..16)
Local Integer TMEN(1..16)
Case NOBOUT
 When 1
  TTYP(1)  = "FCY"      : TLONG(1)  = 5     : TMEN(1)  = 0    : TLIEN(1)  = "01"
 When 2
  TTYP(1)  = "BPR"      : TLONG(1)  = 15    : TMEN(1)  = 0    : TLIEN(1)  = "02"
 When 3
  TTYP(1)  = "VCR"      : TLONG(1)  = 20    : TMEN(1)  = 0    : TLIEN(1)  = "04"
 When 4
  TTYP(1)  = "CUR"      : TLONG(1)  = 3     : TMEN(1)  = 0    : TLIEN(1)  = "07"
 When Default
Endcase
Return

$BOUTONS
Raz GBOUT1, GBOUT2, GBOUT3, GBOUT4, GBOUT5, GBOUT6, GBOUT7, GBOUT8
Raz GBOUT9, GBOUT10, GBOUT11, GBOUT12, GBOUT13, GBOUT14, GBOUT15, GBOUT16
If [M:LST]C01(nolign-1) <> "" 
 If [M:LST]NIV >= 1
  Call TEXTE(1427,GBOUT1) From OBJDIV
  [M:LST]TUNNEL(1) = "FCY"
 Endif
Endif
If [M:LST]C02(nolign-1) <> "" 
 If [M:LST]NIV >= 2
  Call TEXTE(1500,GBOUT2) From OBJDIV
  [M:LST]TUNNEL(2) = "BPR"
 Endif
Endif
If [M:LST]C04(nolign-1) <> "" 
 Call TEXTE(3827,GBOUT3) From OBJDIV
 [M:LST]TUNNEL(3) = "SIH"
Endif
If [M:LST]C07(nolign-1) <> "" 
 Call TEXTE(3837,GBOUT4) From OBJDIV
 [M:LST]TUNNEL(4) = "TCU"
Endif
Return

$LECTURE
If I=1
 Default File "[DUD] , [SIH] , [BPC]"
Endif
Case I
 When 1: [F:ALR]TYP = 7 : [F:ALR]VLR = [F:SIH]FCY
 When 2: [F:ALR]TYP = 7 : [F:ALR]VLR = [F:BPC]BPCNUM
 When 3: [F:ALR]TYP = 7 : [F:ALR]VLR = [F:BPC]BPCNAM
 When 4: [F:ALR]TYP = 7 : [F:ALR]VLR = [F:SIH]NUM
 When 5: [F:ALR]TYP = 8 : [F:ALR]DAT = [F:SIH]ACCDAT
 When 6: [F:ALR]TYP = 4 : [F:ALR]NUM = [F:SIH]AMTATI*[F:SIH]SNS
 When 7: [F:ALR]TYP = 7 : [F:ALR]VLR = [F:SIH]CUR
 When 8: [F:ALR]TYP = 2 : [F:ALR]NUM = 1
Endcase
Return


