Subprog IB_NBLIG
Local Decimal BASPAG
## Action STD
Call IB_NBLIG From CNSSXTSTD
Gosub _AFF
End

Subprog AS_NBLIG
Local Decimal BASPAG
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(4943,GBOUT1) From OBJDIV
Call TEXTE(12824,GBOUT2) From OBJDIV
Call TEXTE(13224,GBOUT3) From OBJDIV
Call IB_NBLIG
Onkey 129 Titled GBOUT1 Call B1_NBLIG From W1CONSSXT2
Onkey 130 Titled GBOUT2 Call B2_NBLIG From W1CONSSXT2
Onkey 131 Titled GBOUT3 Call B3_NBLIG From W1CONSSXT2
Gosub _AFF
End

Subprog B1_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action CONSSMV
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONSSMV"
 Local Char ACTION(20), PROGSUB(GLONADC), PROGSPE(GLONADC), PROGSPV(GLONADC)
 ACTION = "AB1_NBLIG" : PROGSUB = "CNSSXTSTD" : PROGSPE = "SPECNSSXT" : PROGSPV = ""
 Gosub ACTSUB From GOBJSUB
 PARMSK(1) = "1"
 PARMSK(2) = [M]STOFCY(nolign-1)
 PARMSK(3) = [M]ITMREF
 PARMSK(4) = [M]LOTDMY(nolign-1)
 PARMSK(5) = num$([M]STOCOU(nolign-1))
 PARMSK(6) = ""
 PARMSK(7) = ""
 PARMSK(8) = ""
 PARMSK(9) = ""
 Call CONSULT_NUM(BASPAG,"SMV",PARMSK) From GCONSULT
 ACTION = "BB1_NBLIG" : PROGSUB = "CNSSXTSTD" : PROGSPE = "SPECNSSXT" : PROGSPV = ""
 Gosub ACTSUB From GOBJSUB
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B2_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action CONSSLO
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONSSLO"
 PARMSK(1) = "1"
 PARMSK(2) = [M]STOFCY(nolign-1)
 PARMSK(3) = [M]ITMREF
 PARMSK(4) = [M]LOTDMY(nolign-1)
 PARMSK(5) = ""
 PARMSK(6) = ""
 PARMSK(7) = [M]LOTDMY(nolign-1)
 Call CONSULT_NUM(BASPAG,"SLO",PARMSK) From GCONSULT
 [M]LOTDMY(nolign-1) = PARMSK(7)
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B3_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action CONSSTK
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONSSTK"
 PARMSK(1) = "1"
 PARMSK(2) = ""
 PARMSK(3) = [M]ITMREF
 PARMSK(4) = [M]LOTDMY(nolign-1)
 PARMSK(5) = ""
 PARMSK(6) = ""
 PARMSK(7) = ""
 Call CONSULT_NUM(BASPAG,"STK",PARMSK) From GCONSULT
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

