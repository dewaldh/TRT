$DEFVAR
Local Char    ABMSK(GLONABR)(0..15) , NOMMSK(GLONAMK)(0..15)
Local Integer NBMASK , AMA(0..15) , NBMSKCMP
NOMMSK(0) = "SYN0"         : ABMSK(0)  = "SYN0"     : AMA(0) = 1
NOMMSK(1) = "SYN1"         : ABMSK(1)  = "SYN1"     : AMA(1) = 1
NOMMSK(2) = "SYN2"         : ABMSK(2)  = "SYN2"     : AMA(2) = 1
NBMASK = 2
NBMSKCMP = 0
Return

$SETMASK
Case MA
 When 0 : If clalev([M:SYN0])>0 : Default Mask [SYN0] : Endif
 When 1 : If clalev([M:SYN1])>0 : Default Mask [SYN1] : Endif
 When 2 : If clalev([M:SYN2])>0 : Default Mask [SYN2] : Endif
Endcase
Return

$TITMASK
Case MA
 When 0 : If clalev([M:SYN0])>0 : Gosub TITRES From W1SYN0 : Endif
 When 1 : If clalev([M:SYN1])>0 : Gosub TITRES From W1SYN1 : Endif
 When 2 : If clalev([M:SYN2])>0 : Gosub TITRES From W1SYN2 : Endif
Endcase
Return

$FERME_MASK
If clalev([M:SYN0])>0 : Close Local Mask [SYN0] : Endif
If clalev([M:SYN1])>0 : Close Local Mask [SYN1] : Endif
If clalev([M:SYN2])>0 : Close Local Mask [SYN2] : Endif
Return

$RAZMASK
Case MA
 When 0 : If clalev([M:SYN0])>0 : Raz [M:SYN0] : Endif
 When 1 : If clalev([M:SYN1])>0 : Raz [M:SYN1] : Endif
 When 2 : If clalev([M:SYN2])>0 : Raz [M:SYN2] : Endif
Endcase
Return

$AFFMASK
Case MA
 When 0 : If clalev([M:SYN0])>0 : Affzo [M:SYN0] : Endif
 When 1 : If clalev([M:SYN1])>0 : Affzo [M:SYN1] : Endif
 When 2 : If clalev([M:SYN2])>0 : Affzo [M:SYN2] : Endif
Endcase
Return

