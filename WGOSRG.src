$EXEBOUT
Local Char    SAVACT(GLONACT)
Local Integer FLGEXE
SAVACT = GACTION
Case BOUT
 When "1"
  FLGEXE = 1
  GACTION = "STD"
 When "2"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = num$(7)
  PARBOUT(2) = num$(2721)
  PARBOUT(3) = num$([M:SRG0]SRTTYP)
  PARBOUT(4) = [M:SRG0]SRTNUM
  PARBOUT(5) = num$(0)
  FLGEXE = 1
  GACTION = "COPTRS"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","SELTRS","DACOPIE",3,"XYSELTRS") From GTRAITE
Endcase
GACTION = SAVACT
Return

