# Sage X3 supervisor
# Mask management MFGTRI 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [26/03/2018]
A_HEURE = "12:53:06"
A_USER  = "ADMIN"
A_STAMP = "20180326125306"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask MFGTRI [MFT]
Gosub HORODAT
Local Inpbox "MFGTRI" From GFONCTION At A_STAMP With A_WINDPREV Mask [MFT] As [SIM_]
Grizo [MFT]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [MFT]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=32 : X2(0)=81 : Y1(0)=11 : Y2(0)=17
Return

$ON_CRIT1
Onevent INIT_AREA Call D_CRIT1(zc) From W1MFGTRI
Onevent BEFORE_INPUT Call AS_CRIT1(zc) From W1MFGTRI
Return

Subprog D_CRIT1(VALEUR)
Variable Integer VALEUR
If varinit([M]CRIT1,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_CRIT1(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

$ON_CRIT2
Onevent CONTROL Call C_CRIT2(zc) From W1MFGTRI
Onevent INIT_AREA Call D_CRIT2(zc) From W1MFGTRI
Onevent BEFORE_INPUT Call AS_CRIT2(zc) From W1MFGTRI
Return

Subprog D_CRIT2(VALEUR)
Variable Integer VALEUR
If varinit([M]CRIT2,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_CRIT2(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog C_CRIT2(VALEUR)
Variable Integer VALEUR
## Action STD
Call C_CRIT2(VALEUR) From FUNBENCHO
If mkstat : GERR = 1 : GZONE = "CRIT2" : GZNUM = 14502 : Endif
Gosub _AFF
End

$CHG_STY
Return


