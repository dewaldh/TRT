# Supervisor
# Mask management CRMAGD0 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:59:05"
A_USER  = "ADMIN"
A_STAMP = "20180827235905"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask CRMAGD0 [CRM0]
Gosub HORODAT
Local Inpbox "CRMAGD0" From GFONCTION At A_STAMP With A_WINDPREV Mask [CRM0] As [SIM_]
Grizo [CRM0]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [CRM0]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=112 : Y1(0)=1 : Y2(0)=2
Return

$ON_REP
Onevent CONTROL Call C_REP(zc) From W1CRMAGD0
Onevent BEFORE_INPUT Call AS_REP(zc) From W1CRMAGD0
Onevent AFTER_CHANGE Gosub AMM_REP From W1CRMAGD0
Return

Subprog AS_REP(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(5385,GBOUT1) From OBJDIV
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey 129 Titled GBOUT1 Call B1_REP(zc) From W1CRMAGD0
Onkey   2 Titled GBOUTS Call S_REP(zc) From W1CRMAGD0
Onkey 144 Titled GBOUTP Call P_REP(zc) From W1CRMAGD0
Onkey 146 Titled GBOUTA Call SA_REP(zc) From W1CRMAGD0
Gosub _AFF
End

Subprog C_REP(VALEUR)
Variable Char    VALEUR()
## Action %CNTOBJ
Call CONTSEL("REP","!",VALEUR,"",mkstat) From CONTOBJ
If mkstat : GERR = 1 : GZONE = "REP" : GZNUM = 16058 : Endif
Gosub _AFF
End

$AMM_REP
Call AM_REP(zc)
If !mkstat & GOBJET
 zoncou = "REP" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_REP(VALEUR)
Variable Char    VALEUR()
If !mkstat & evalue("dim("+clanam([M])+"ZREP)")>indice
 [M]REP(indice) = VALEUR
 Affzo ZREP(indice)
Endif
Gosub _AFF
End

Subprog S_REP(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "REP"
PARMSK(2) = "!"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog B1_REP(VALEUR)
Variable Char    VALEUR()
Call OBJET("REP",VALEUR,"") From GOBJET
Gosub _AFF
End

Subprog SA_REP(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "REP"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_REP(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("REP",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZREP
