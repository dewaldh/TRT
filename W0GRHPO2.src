# Supervisor
# Mask management GRHPO2 

Subprog SAIMSK(IMPFIC,ACTION,IMPTRT)
Value Char IMPFIC
Value Char ACTION
Value Char IMPTRT

Gosub DEFVAR

####################################
## Bloc liste 1
####################################
IMPTBL = 0

## Zone PERCOD
mkstat = 0
zoncou = "PERCOD"
indice = 0
IMPENT = [M]PERCOD
WNUM = IMPENT
If varinit([M]PERCOD,indice)=0
 IMPENT = 1
Endif
If varmode([M]PERCOD,indice)=0
 Call INICOMBO(2231) From COMBOS
 SAVACT = GACTION : GACTION = "STD"
 Call AS_PERCOD(IMPENT) From TRTACHGRH1
 GACTION = SAVACT
 If mkstat=1 : Raz IMPENT : Endif
 If IMPENT<1 | GMENLOC(IMPENT)=1
  IMPENT = find(0,GMENLOC(1..len(mess(0,2231,1))))
 Endif
 [M]PERCOD(indice) = IMPENT
 If !mkstat
  IMPMOD = 0 : IMPZON = "PERCOD" : Gosub ACTION From =IMPTRT
  IMPENT = [M]PERCOD(indice)
 Endif
 If !mkstat
  If IMPENT=0
   mkstat = 1 : GMESSAGE = mess(10,123,1)
  Endif
  If mkstat : GERR = 1 : GZONE = "PERCOD" : GZNUM = 1355 : Endif
  Gosub AFF From GSAISIE
  If mkstat : End : Endif
  If !mkstat
   If IMPENT>0 & IMPENT<dim(GMENLOC) & GMENLOC(IMPENT)<>0
    mkstat = 1 : GMESSAGE = mess(99,123,1)
   Endif
   If mkstat : GERR = 1 : GZONE = "PERCOD" : GZNUM = 1355 : Endif
   Gosub AFF From GSAISIE
   If mkstat : End : Endif
   If !mkstat
    If WNUM<>IMPENT or IMPMOD
     SAVACT = GACTION : GACTION = "STD"
     Call AM_PERCOD(IMPENT) From TRTACHGRH1
     GACTION = SAVACT
     If mkstat : GERR = 1 : GZONE = "PERCOD" : GZNUM = 1355 : Endif
     Gosub AFF From GSAISIE
     If mkstat : End : Endif
    Endif
   Endif
  Endif
 Endif
Endif
[M]PERCOD = IMPENT

## Zone DATDEB
mkstat = 0
zoncou = "DATDEB"
indice = 0
WDATE = [M]DATDEB
If varmode([M]DATDEB,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "DATDEB" : Gosub ACTION From =IMPTRT
 Endif
 If [M]DATDEB=[0/0/0]
  mkstat = 1 : GMESSAGE = mess(10,123,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "DATDEB" : GZNUM = 1805 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
 If !mkstat
  If WDATE<>[M]DATDEB or IMPMOD
   SAVACT = GACTION : GACTION = "STD"
   Call AM_DATDEB([M]DATDEB) From TRTACHGRH1
   GACTION = SAVACT
   If mkstat : GERR = 1 : GZONE = "DATDEB" : GZNUM = 1805 : Endif
   Gosub AFF From GSAISIE
   If mkstat : End : Endif
  Endif
 Endif
Endif

## Zone PERNBR
mkstat = 0
zoncou = "PERNBR"
indice = 0
WNUM = [M]PERNBR
If varmode([M]PERNBR,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "PERNBR" : Gosub ACTION From =IMPTRT
 Endif
 If [M]PERNBR=0
  mkstat = 1 : GMESSAGE = mess(10,123,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "PERNBR" : GZNUM = 30755 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
 If !mkstat
  If WNUM<>[M]PERNBR or IMPMOD
   SAVACT = GACTION : GACTION = "STD"
   Call AM_PERNBR([M]PERNBR) From TRTACHGRH1
   GACTION = SAVACT
   If mkstat : GERR = 1 : GZONE = "PERNBR" : GZNUM = 30755 : Endif
   Gosub AFF From GSAISIE
   If mkstat : End : Endif
  Endif
 Endif
Endif

## Zone DATFIN
mkstat = 0
zoncou = "DATFIN"
indice = 0
WDATE = [M]DATFIN
If varmode([M]DATFIN,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "DATFIN" : Gosub ACTION From =IMPTRT
 Endif
 If [M]DATFIN=[0/0/0]
  mkstat = 1 : GMESSAGE = mess(10,123,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "DATFIN" : GZNUM = 1806 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
 If !mkstat
  If WDATE<>[M]DATFIN or IMPMOD
   SAVACT = GACTION : GACTION = "STD"
   Call AM_DATFIN([M]DATFIN) From TRTACHGRH1
   GACTION = SAVACT
   If mkstat : GERR = 1 : GZONE = "DATFIN" : GZNUM = 1806 : Endif
   Gosub AFF From GSAISIE
   If mkstat : End : Endif
  Endif
 Endif
Endif

####################################
## Bloc tableau 2
####################################
IMPTBL = 1

## Zone NBLIG
mkstat = 0
zoncou = "NBLIG"
indice = 0
status = 1
zoncou = "NBLIG"
If varmode([M]NBLIG,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "NBLIG" : Gosub ACTION From =IMPTRT
 Endif
 If !mkstat
  NBLIG = [M]NBLIG
  For nolign=1 To NBLIG
   indice = nolign-1
   [M]NBLIG = nolign
   status = 75
   Call SAI_NBLIG(IMPFIC,ACTION,IMPTRT)
   If mkstat : Break : Endif
  Next nolign
  If mkstat : End : Endif
  indice = 0
 Endif
Endif

mkstat = 0

End

####################################
## Bloc tableau 2
####################################
Subprog SAI_NBLIG(IMPFIC,ACTION,IMPTRT)
