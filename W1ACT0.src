# Supervisor
# Mask management ACT0 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:47:18"
A_USER  = "ADMIN"
A_STAMP = "20180827234718"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask ACT0 [ACT0]
Gosub HORODAT
Local Inpbox "ACT0" From GFONCTION At A_STAMP With A_WINDPREV Mask [ACT0] As [SIM_]
Grizo [ACT0]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [ACT0]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=74 : Y1(0)=1 : Y2(0)=2
Return

$ON_ACTION
Onevent CONTROL Call C_ACTION(zc) From W1ACT0
Onevent BEFORE_INPUT Call AS_ACTION(zc) From W1ACT0
Return

Subprog AS_ACTION(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_ACTION(zc) From W1ACT0
Onkey 144 Titled GBOUTP Call P_ACTION(zc) From W1ACT0
Onkey 146 Titled GBOUTA Call SA_ACTION(zc) From W1ACT0
Gosub _AFF
End

Subprog C_ACTION(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "ACTION" : GZNUM = 89 : Endif
If !mkstat
 ## Action CONTOBJW
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONTOBJW"
 PARMSK(1) = "ACT"
 Call S_AFF_CHAR(VALEUR,PARMSK,"CONTOBJW","CONTOBJ","") From GACTION
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "ACTION" : GZNUM = 89 : Endif
Endif
Gosub _AFF
End

Subprog S_ACTION(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELOBJET
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELOBJET"
 PARMSK(1) = "ACT"
 PARMSK(2) = "ACTION"
 Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJET","SELOBJ","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

Subprog SA_ACTION(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "ACT"
PARMSK(3) = "$"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_ACTION(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("ACT",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZINTITA
Onevent BEFORE_INPUT Call AS_ZINTITA(zc) From W1ACT0
Onevent AFTER_AREA Call AP_ZINTITA(zc) From W1ACT0
Return

Subprog AS_ZINTITA(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
If !GWEBSERV
 ## Action ABRINI
 Call INIABR From SUBAAB
 If mkstat=2
  [M]ZINTITA(INDIC) = VALEUR
  Affzo ZINTITA(INDIC) : mkstat = 2
 Endif
Endif
Gosub _AFF
End

Subprog AP_ZINTITA(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action TXTCONT
 Call TXTCONT(VALEUR,[M]ZINTITA,[M]INTITA,30,6,[M]ACTION,"#1") From OBJDIV
 If mkstat : GERR = 1 : GZONE = "ZINTITA" : GZNUM = 8 : Endif
Endif
Gosub _AFF
End

$CHG_STY
Return


