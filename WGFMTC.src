$EXEBOUT
Local Char    SAVACT(GLONACT)
Local Integer FLGEXE
SAVACT = GACTION
Case BOUT
 When "U"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = num$(TRIOK)
  FLGEXE = 1
  GACTION = "TRILETTR"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","SUBTLT","TRILETTR",4,"") From GTRAITE
  TRIOK = val(PARBOUT(1))
 When "V"
  FLGEXE = 1
  GACTION = "STD"
 When "G"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  FLGEXE = 1
  GACTION = "MTCLET"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"DMTCECH","SUBLTR","",1,"SPELTR") From GTRAITE
 When "O"
  FLGEXE = 1
  GACTION = "STD"
 When "N"
  FLGEXE = 1
  GACTION = "STD"
 When "S"
  FLGEXE = 1
  GACTION = "STD"
 When "Q"
  FLGEXE = 1
  GACTION = "STD"
 When "1"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  FLGEXE = 1
  GACTION = "MTCAUT"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","SUBLTR","",1,"SPELTR") From GTRAITE
 When "2"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  FLGEXE = 1
  GACTION = "MTCCRIT"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","LETTCRIT","DMTCCRIT",4,"SPELTR") From GTRAITE
 When "3"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  FLGEXE = 1
  GACTION = "MTCMONT"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","SUBLTR","DMTCMONT",3,"SPELTR") From GTRAITE
 When "4"
  FLGEXE = 1
  GACTION = "STD"
Endcase
GACTION = SAVACT
Return

