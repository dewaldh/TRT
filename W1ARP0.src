# Supervisor
# Mask management ARP0 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:49:58"
A_USER  = "ADMIN"
A_STAMP = "20180827234958"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask ARP0 [ARP0]
Gosub HORODAT
Local Inpbox "ARP0" From GFONCTION At A_STAMP With A_WINDPREV Mask [ARP0] As [SIM_]
Grizo [ARP0]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [ARP0]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=74 : Y1(0)=1 : Y2(0)=2
Return

$ON_RPTCOD
Onevent CONTROL Call C_RPTCOD(zc) From W1ARP0
Onevent BEFORE_INPUT Call AS_RPTCOD(zc) From W1ARP0
Return

Subprog AS_RPTCOD(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_RPTCOD(zc) From W1ARP0
Onkey 144 Titled GBOUTP Call P_RPTCOD(zc) From W1ARP0
Onkey 146 Titled GBOUTA Call SA_RPTCOD(zc) From W1ARP0
Gosub _AFF
End

Subprog C_RPTCOD(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "RPTCOD" : GZNUM = 846 : Endif
If !mkstat
 ## Action CONTOBJW
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONTOBJW"
 PARMSK(1) = "ARP"
 Call S_AFF_CHAR(VALEUR,PARMSK,"CONTOBJW","CONTOBJ","") From GACTION
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "RPTCOD" : GZNUM = 846 : Endif
Endif
Gosub _AFF
End

Subprog S_RPTCOD(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELOBJET
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELOBJET"
 PARMSK(1) = "ARP"
 PARMSK(2) = "RPTCOD"
 Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJET","SELOBJ","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

Subprog SA_RPTCOD(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "ARP"
PARMSK(3) = "$"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_RPTCOD(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("ARP",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZRPTDES
Onevent BEFORE_INPUT Call AS_ZRPTDES(zc) From W1ARP0
Onevent AFTER_AREA Call AP_ZRPTDES(zc) From W1ARP0
Return

Subprog AS_ZRPTDES(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
If !GWEBSERV
 ## Action ABRINI
 Call INIABR From SUBAAB
 If mkstat=2
  [M]ZRPTDES(INDIC) = VALEUR
  Affzo ZRPTDES(INDIC) : mkstat = 2
 Endif
Endif
Gosub _AFF
End

Subprog AP_ZRPTDES(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action TXTCONT
 Call TXTCONT(VALEUR,[M]ZRPTDES,[M]RPTDES,30,21,[M]RPTCOD,"RPTDES") From OBJDIV
 If mkstat : GERR = 1 : GZONE = "ZRPTDES" : GZNUM = 8 : Endif
Endif
Gosub _AFF
End

$CHG_STY
Return


