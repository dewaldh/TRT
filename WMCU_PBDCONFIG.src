############################################################################################
### Subprog _AUPDATE
############################################################################################
Subprog _AUPDATE(PBDCONFIG,ASTATUS)
Variable Instance PBDCONFIG Using C_PBDCONFIG
Variable Integer ASTATUS

If PBDCONFIG = null : End : Endif

Gosub _AVARIABLES From WMC00PBDCONFIG

[L]A_STRSITE = ""
[L]A_STRACC = ""
Gosub AUPDATE_PBDCONFIG

End

#-----------------------------------------------------#

############################################################################################
### Subprog AUPDATE
############################################################################################
Subprog AUPDATE(PBDCONFIG,ASTATUS)
Variable Instance PBDCONFIG Using C_PBDCONFIG
Variable Integer ASTATUS

If PBDCONFIG = null : End : Endif

Gosub AVARIABLES From WMC00PBDCONFIG
If [L]ASTATUS>=[V]CST_AERROR : Goto AUPDATE_END : Endif

[L]A_STRSITE = ""
[L]A_STRACC = ""
PBDCONFIG.ASTALIN = [V]CST_AUPD
Gosub AUPDATE_CONTROL
If [L]ASTATUS>=[V]CST_AERROR : Goto AUPDATE_END : Endif

If !adxlog
 Gosub AUPDATE_TR_PBDCONFIG
Else
 Gosub AUPDATE_PBDCONFIG
Endif
If [L]ASTATUS>=[V]CST_AERROR : Goto AUPDATE_END : Endif

Gosub _AUPDATE_AFTER
[L]A_I = PBDCONFIG.freeSnapshot
PBDCONFIG.snapshotEnabled = 1
$AUPDATE_END
End


$AUPDATE_CONTROL
Gosub _AUPDATE_CONTROL_BEFORE
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
# Control mandatory
[L]ASTATUS =  max([L]ASTATUS,fmet PBDCONFIG._AMANDATORY)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

# Control format
[L]ASTATUS =  max([L]ASTATUS,fmet PBDCONFIG._AFORMAT)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

# Control other
[L]ASTATUS =  max([L]ASTATUS,fmet PBDCONFIG._AOTHERS)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Gosub _AUPDATE_CONTROL_AFTER
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Return

#-----------------------------------------------------#
$_AUPDATE_CONTROL_BEFORE
If PBDCONFIG.ASTALIN = [V]CST_ANEWDEL : Return : Endif
PBDCONFIG.ASTALIN = [V]CST_AUPD
If [V]CST_ASTALIN(PBDCONFIG.ASTALIN)<>""
 [L]A_ASTALIN = PBDCONFIG.ASTALIN
 [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_CONTROL_BEFORE"))
 If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Endif
For A_N2=1 To maxtab(PBDCONFIG.LINESEXCL) : # PBDCONFIGD -- 2
 If PBDCONFIG.LINESEXCL(A_N2) <> null
& and PBDCONFIG.LINESEXCL(A_N2).ASTALIN<>[V]CST_ANEWDEL
  If PBDCONFIG.LINESEXCL(A_N2).ASTALIN<>[V]CST_ANEW & PBDCONFIG.ASTALIN=[V]CST_ADEL
   PBDCONFIG.LINESEXCL(A_N2).ASTALIN = [V]CST_ADEL
  Endif
  If PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[V]CST_ANEW & find(PBDCONFIG.ASTALIN,[V]CST_ADEL,[V]CST_ANEWDEL)>0
   PBDCONFIG.LINESEXCL(A_N2).ASTALIN = [V]CST_ANEWDEL
  Endif
  If [V]CST_ASTALIN(PBDCONFIG.LINESEXCL(A_N2).ASTALIN)<>""
   Case [V]CST_ASTALIN(PBDCONFIG.LINESEXCL(A_N2).ASTALIN)
    When [V]CST_APRGAINSERT  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._AINSERT_CONTROL_BEFORE)
    When [V]CST_APRGAUPDATE : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._AUPDATE_CONTROL_BEFORE)
    When [V]CST_APRGADELETE  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._ADELETE_CONTROL_BEFORE)
   Endcase
   If [L]ASTATUS>=[V]CST_AERROR : Break  : Endif
  Endif
 Endif
Next A_N2
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
For A_N2=1 To maxtab(PBDCONFIG.LINESINCL) : # PBDCONFIGD -- 3
 If PBDCONFIG.LINESINCL(A_N2) <> null
& and PBDCONFIG.LINESINCL(A_N2).ASTALIN<>[V]CST_ANEWDEL
  If PBDCONFIG.LINESINCL(A_N2).ASTALIN<>[V]CST_ANEW & PBDCONFIG.ASTALIN=[V]CST_ADEL
   PBDCONFIG.LINESINCL(A_N2).ASTALIN = [V]CST_ADEL
  Endif
  If PBDCONFIG.LINESINCL(A_N2).ASTALIN=[V]CST_ANEW & find(PBDCONFIG.ASTALIN,[V]CST_ADEL,[V]CST_ANEWDEL)>0
   PBDCONFIG.LINESINCL(A_N2).ASTALIN = [V]CST_ANEWDEL
  Endif
  If [V]CST_ASTALIN(PBDCONFIG.LINESINCL(A_N2).ASTALIN)<>""
   Case [V]CST_ASTALIN(PBDCONFIG.LINESINCL(A_N2).ASTALIN)
    When [V]CST_APRGAINSERT  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._AINSERT_CONTROL_BEFORE)
    When [V]CST_APRGAUPDATE : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._AUPDATE_CONTROL_BEFORE)
    When [V]CST_APRGADELETE  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._ADELETE_CONTROL_BEFORE)
   Endcase
   If [L]ASTATUS>=[V]CST_AERROR : Break  : Endif
  Endif
 Endif
Next A_N2
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

Return

#-----------------------------------------------------#
$_AUPDATE_CONTROL_AFTER
For A_N2=1 To maxtab(PBDCONFIG.LINESEXCL) : # PBDCONFIGD -- 2
 If PBDCONFIG.LINESEXCL(A_N2) <> null
& and PBDCONFIG.LINESEXCL(A_N2).ASTALIN<>[V]CST_ANEWDEL
  If [V]CST_ASTALIN(PBDCONFIG.LINESEXCL(A_N2).ASTALIN)<>""
   Case [V]CST_ASTALIN(PBDCONFIG.LINESEXCL(A_N2).ASTALIN)
    When [V]CST_APRGAINSERT  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._AINSERT_CONTROL_AFTER)
    When [V]CST_APRGAUPDATE : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._AUPDATE_CONTROL_AFTER)
    When [V]CST_APRGADELETE  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._ADELETE_CONTROL_AFTER)
   Endcase
   If [L]ASTATUS>=[V]CST_AERROR : Break  : Endif
  Endif
 Endif
Next A_N2
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
For A_N2=1 To maxtab(PBDCONFIG.LINESINCL) : # PBDCONFIGD -- 3
 If PBDCONFIG.LINESINCL(A_N2) <> null
& and PBDCONFIG.LINESINCL(A_N2).ASTALIN<>[V]CST_ANEWDEL
  If [V]CST_ASTALIN(PBDCONFIG.LINESINCL(A_N2).ASTALIN)<>""
   Case [V]CST_ASTALIN(PBDCONFIG.LINESINCL(A_N2).ASTALIN)
    When [V]CST_APRGAINSERT  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._AINSERT_CONTROL_AFTER)
    When [V]CST_APRGAUPDATE : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._AUPDATE_CONTROL_AFTER)
    When [V]CST_APRGADELETE  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._ADELETE_CONTROL_AFTER)
   Endcase
   If [L]ASTATUS>=[V]CST_AERROR : Break  : Endif
  Endif
 Endif
Next A_N2
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

If [V]CST_ASTALIN(PBDCONFIG.ASTALIN)<>""
 [L]A_ASTALIN = PBDCONFIG.ASTALIN
 [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_CONTROL_AFTER"))
 If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Endif
Return

#-----------------------------------------------------#
$AUPDATE_TR_PBDCONFIG
Trbegin [F:PBDCNF]
 Gosub AUPDATE_PBDCONFIG
 If [L]ASTATUS>=[V]CST_AERROR : Gosub AUPDATE_ABORT : Return : Endif
Commit
Return

#-----------------------------------------------------#
#-----------------------------------------------------#
$AUPDATE_PBDCONFIG
[L]A_ASTALIN = PBDCONFIG.ASTALIN
[L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_BEFORE"))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

[L]ASTATUS = max([L]ASTATUS,func WMC00PBDCONFIG._MAJSQL_PBDCONFIG(PBDCONFIG))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

For [L]A_TYPMAJ=[V]CST_ADEL,[V]CST_AUPD,[V]CST_ANEW
 #-----------------------#
 For A_N2=1 To maxtab(PBDCONFIG.LINESEXCL)
  If PBDCONFIG.LINESEXCL(A_N2) <> null and
& (PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[L]A_TYPMAJ or
& PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[V]CST_ALL)
   If PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[L]A_TYPMAJ
    Case PBDCONFIG.LINESEXCL(A_N2).ASTALIN
     When [V]CST_AUPD  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._AUPDATE)
     When [V]CST_ANEW : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._AINSERT)
     When [V]CST_ADEL  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESEXCL(A_N2)._ADELETE)
    Endcase
    If [L]ASTATUS>=[V]CST_AERROR : Break 2 : Endif
   Endif
  Endif
  If [L]ASTATUS>=[V]CST_AERROR : Break 2 : Endif
 Next A_N2
 If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
 #-----------------------#
 #-----------------------#
 For A_N2=1 To maxtab(PBDCONFIG.LINESINCL)
  If PBDCONFIG.LINESINCL(A_N2) <> null and
& (PBDCONFIG.LINESINCL(A_N2).ASTALIN=[L]A_TYPMAJ or
& PBDCONFIG.LINESINCL(A_N2).ASTALIN=[V]CST_ALL)
   If PBDCONFIG.LINESINCL(A_N2).ASTALIN=[L]A_TYPMAJ
    Case PBDCONFIG.LINESINCL(A_N2).ASTALIN
     When [V]CST_AUPD  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._AUPDATE)
     When [V]CST_ANEW : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._AINSERT)
     When [V]CST_ADEL  : [L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.LINESINCL(A_N2)._ADELETE)
    Endcase
    If [L]ASTATUS>=[V]CST_AERROR : Break 2 : Endif
   Endif
  Endif
  If [L]ASTATUS>=[V]CST_AERROR : Break 2 : Endif
 Next A_N2
 If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
 #-----------------------#
Next
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

[L]A_ASTALIN = PBDCONFIG.ASTALIN
[L]ASTATUS = max([L]ASTATUS,fmet PBDCONFIG.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_AFTER"))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Return

#-----------------------------------------------------#
$AUPDATE_ABORT
Rollback
$_AUPDATE_ABORT
If PBDCONFIG.snapshotEnabled=1
 [L]A_RETIK = PBDCONFIG.revertUpdTick
Endif
Local Integer ASTATUS2
For A_N2=1 To maxtab(PBDCONFIG.LINESEXCL)
 If PBDCONFIG.LINESEXCL(A_N2) <> null
  [L]ASTATUS2 = fmet PBDCONFIG.LINESEXCL(A_N2)._AUPDATE_ABORT
  If PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[V]CST_ADEL or PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[V]CST_ANEWDEL
   FreeInstance PBDCONFIG.LINESEXCL(A_N2)
   PBDCONFIG.LINESEXCL(A_N2) = null
  Endif
  [L]ASTATUS = max([L]ASTATUS2,[L]ASTATUS)
 Endif
Next A_N2
Local Integer ASTATUS2
For A_N2=1 To maxtab(PBDCONFIG.LINESINCL)
 If PBDCONFIG.LINESINCL(A_N2) <> null
  [L]ASTATUS2 = fmet PBDCONFIG.LINESINCL(A_N2)._AUPDATE_ABORT
  If PBDCONFIG.LINESINCL(A_N2).ASTALIN=[V]CST_ADEL or PBDCONFIG.LINESINCL(A_N2).ASTALIN=[V]CST_ANEWDEL
   FreeInstance PBDCONFIG.LINESINCL(A_N2)
   PBDCONFIG.LINESINCL(A_N2) = null
  Endif
  [L]ASTATUS = max([L]ASTATUS2,[L]ASTATUS)
 Endif
Next A_N2

[L]ASTATUS = max(fmet PBDCONFIG.ACTION("AUPDATE_ABORT"),[L]ASTATUS)
Return
#-----------------------------------------------------#


#-----------------------------------------------------#
$_AUPDATE_AFTER
If find(PBDCONFIG.ASTALIN,[V]CST_ADEL,[V]CST_ANEWDEL,[V]CST_ALL)=0
 PBDCONFIG.ASTALIN = [V]CST_ALL
Endif
Local Integer ASTATUS2
For A_N2=1 To maxtab(PBDCONFIG.LINESEXCL)
 If PBDCONFIG.LINESEXCL(A_N2) <> null
  [L]ASTATUS2 = fmet PBDCONFIG.LINESEXCL(A_N2)._AUPDATE_AFTER
  If PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[V]CST_ADEL or PBDCONFIG.LINESEXCL(A_N2).ASTALIN=[V]CST_ANEWDEL
   FreeInstance PBDCONFIG.LINESEXCL(A_N2)
   PBDCONFIG.LINESEXCL(A_N2) = null
  Endif
  [L]ASTATUS = max([L]ASTATUS2,[L]ASTATUS)
 Endif
Next A_N2
Local Integer ASTATUS2
For A_N2=1 To maxtab(PBDCONFIG.LINESINCL)
 If PBDCONFIG.LINESINCL(A_N2) <> null
  [L]ASTATUS2 = fmet PBDCONFIG.LINESINCL(A_N2)._AUPDATE_AFTER
  If PBDCONFIG.LINESINCL(A_N2).ASTALIN=[V]CST_ADEL or PBDCONFIG.LINESINCL(A_N2).ASTALIN=[V]CST_ANEWDEL
   FreeInstance PBDCONFIG.LINESINCL(A_N2)
   PBDCONFIG.LINESINCL(A_N2) = null
  Endif
  [L]ASTATUS = max([L]ASTATUS2,[L]ASTATUS)
 Endif
Next A_N2
Return



