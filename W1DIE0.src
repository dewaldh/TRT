#<AdxTL>@(#)0.0.0.0 $Revision$
# Supervisor
# Mask management DIE0 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:59:52"
A_USER  = "ADMIN"
A_STAMP = "20180827235952"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask DIE0 [DIE0]
Gosub HORODAT
Local Inpbox "DIE0" From GFONCTION At A_STAMP With A_WINDPREV Mask [DIE0] As [SIM_]
Grizo [DIE0]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [DIE0]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=78 : Y1(0)=1 : Y2(0)=2
Return

$ON_DIE
Onevent CONTROL Call C_DIE(zc) From W1DIE0
Onevent BEFORE_INPUT Call AS_DIE(zc) From W1DIE0
Onevent AFTER_CHANGE Gosub AMM_DIE From W1DIE0
Return

Subprog AS_DIE(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_DIE(zc) From W1DIE0
Onkey 144 Titled GBOUTP Call P_DIE(zc) From W1DIE0
Onkey 146 Titled GBOUTA Call SA_DIE(zc) From W1DIE0
Gosub _AFF
End

Subprog C_DIE(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "DIE" : GZNUM = 3984 : Endif
If !mkstat
 ## Action CONTOBJW
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONTOBJW"
 PARMSK(1) = "DIE"
 Call S_AFF_CHAR(VALEUR,PARMSK,"CONTOBJW","CONTOBJ","") From GACTION
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "DIE" : GZNUM = 3984 : Endif
Endif
Gosub _AFF
End

$AMM_DIE
Call AM_DIE(zc)
If !mkstat & GOBJET
 zoncou = "DIE" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_DIE(VALEUR)
Variable Char    VALEUR()
If !mkstat & evalue("dim("+clanam([M])+"ZDIE)")>indice
 [M]DIE(indice) = VALEUR
 Affzo ZDIE(indice)
Endif
Gosub _AFF
End

Subprog S_DIE(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELOBJET
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELOBJET"
 PARMSK(1) = "DIE"
 PARMSK(2) = "DIE"
 Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJET","SELOBJ","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

Subprog SA_DIE(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "DIE"
PARMSK(3) = "$"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_DIE(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("DIE",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZDIE
Onevent BEFORE_AREA Gosub AV_ZDIE From W1DIE0
Return

$AV_ZDIE
Call LECTEXTRA(zc,"GDIE","DESTRA",num$([M]DIE(indice)),"") From ATEXTRA
Gosub _AFF
Return

$ON_DESTRA
Onevent INIT_AREA Call D_DESTRA(zc) From W1DIE0
Onevent BEFORE_INPUT Call AS_DESTRA(zc) From W1DIE0
Return

Subprog IB_DESTRA(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action BOUTTEXTRA
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "BOUTTEXTRA"
 Call S_AFF_CHAR(VALEUR,PARMSK,"","ATEXTRA","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

Subprog D_DESTRA(VALEUR)
Variable Char    VALEUR()
If varinit([M]DESTRA,indice)=0
 ## Action LECTEXTRA
 Call LECTEXTRA(VALEUR,"GDIE","DESTRA",[M:DIE0]DIE,"") From ATEXTRA
Endif
Gosub _AFF
End

Subprog AS_DESTRA(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(9637,GBOUT1) From OBJDIV
Call IB_DESTRA(VALEUR)
Onkey 129 Titled GBOUT1 Call B1_DESTRA(zc) From W1DIE0
Gosub _AFF
End

Subprog B1_DESTRA(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action ATEXTRA
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "ATEXTRA"
 Local Char ACTION(20), PROGSUB(GLONADC), PROGSPE(GLONADC), PROGSPV(GLONADC)
 ACTION = "AB1_DESTRA" : PROGSUB = "SUBDIE" : PROGSPE = "SPEDIE" : PROGSPV = ""
 Gosub ACTSUB From GOBJSUB
 PARMSK(1) = "GDIE"
 PARMSK(2) = "DESTRA"
 PARMSK(3) = [M:DIE0]DIE
 PARMSK(4) = ""
 Call SAISIE_CHAR(VALEUR,PARMSK,"ATEXTRA","ATEXTRA","") From GSAISIE
 ACTION = "BB1_DESTRA" : PROGSUB = "SUBDIE" : PROGSPE = "SPEDIE" : PROGSPV = ""
 Gosub ACTSUB From GOBJSUB
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$CHG_STY
Return


