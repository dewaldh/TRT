#######################################################################################################
$ACTION

Case ACTION
  When Default
Endcase

Case GACTION
  When "YSELBPCBCG"
    Gosub S_BPC
Endcase
Return


######################################################################################
$S_BPC
Local Integer I
Local Char TEXTE(255)(1..7000,1..5)
Local Char TEX(25)(7000)
Local Char REQUEST(255)(1..2)
#Local Char LFCY(5) : LFCY = PARAM(1)

I=0
TIT(1)="Customer ID"
TIT(2)="Customer Name"
TIT(3)="Short name"
TIT(4)="Invoice to"
TIT(5)="Group customer"

I=0

REQUEST(1) = "Select TOP 999 BPCNUM_0, BPCNAM_0, BPCSHO_0, BPCINV_0, BPCGRU_0 From BPCUSTOMER BPC WHERE BPC.BPCSTA_0=2 "

If PARAM(1) <> ""
  REQUEST(1) -= "and BCGCOD_0='" + PARAM(1) + "'"
Endif


For (Char BPCNUM, Char BPCNAM(100), Char BPCSHO, Char BPCINV, Char BPCGRU) From "5" Sql REQUEST As [YLNK]
  I += 1
  TEX(I)     = [F:YLNK]BPCNUM
  TEXTE(I,1) = [F:YLNK]BPCNUM
  TEXTE(I,2) = [F:YLNK]BPCNAM
  TEXTE(I,3) = [F:YLNK]BPCSHO
  TEXTE(I,4) = [F:YLNK]BPCINV
  TEXTE(I,5) = [F:YLNK]BPCGRU
Next
NBTEX=I

If I = 0 Then
  GMESSAGE = mess(37,6255,1) - "for Customer category:" - PARAM(1)
  GERR = 1
  mkstat = 2
  #zonsui = ""
Endif

Return

