Subprog AM_YDEFBAN(VALEUR)
Variable Char    VALEUR()

Local Integer YVALID : YVALID = 1

If VALEUR <> ""
  Filter [F:YBAN] Where FCY=[M:PJM0]SALFCY
  For [F:YBAN]
    If VALEUR = [F:YBAN]BAN
      YVALID = 2
      Break
    Endif
  Next
  Filter [F:YBAN]


  If YVALID = 1
    GMESSAGE = mess(32,6201,1)
    GERR = 1
    mkstat = 2
    Else
    GZINSPJM.PJM(1).YDEFBAN = VALEUR
  Endif
Endif

End


