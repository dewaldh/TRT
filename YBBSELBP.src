#######################################################################################################
$ACTION
Case ACTION
  When Default
Endcase

Case GACTION
  When "YBBSELBP"
    Gosub S_SELBP
Endcase
Return

$S_SELBP
Local Integer I
Local Char TEXTE(255)(1..2000,1..4)
Local Char TEX(25)(2000)
Local Char QRY1(255)(0..4)
Local Char QRY2(255)

I=0
TIT(1)="BP"
TIT(2)="Company name"
TIT(3)="Short description"
TIT(4)="Category"
CRITERE = "1=1"

QRY1(0) = "select top 1000 BPCNUM_0, BPCNAM_0, BPCSHO_0, 'Customer' from BPCUSTOMER where BPCSTA_0 = 2"
QRY1(1) -= "union all"
QRY1(2) -= "SELECT BPSNUM_0, BPSNAM_0, BPSSHO_0, 'Supplier' From BPSUPPLIER where ENAFLG_0 = 2 and YSUPSTA_0 = 1"

For (Char BPCNUM, Char BPCNAM, Char BCGCOD, Char CAT) From "5" Sql QRY1 As [YLNK]
  I += 1
  TEX(I)     = [F:YLNK]BPCNUM
  TEXTE(I,1) = [F:YLNK]BPCNUM
  TEXTE(I,2) = [F:YLNK]BPCNAM
  TEXTE(I,3) = [F:YLNK]BCGCOD
  TEXTE(I,4) = [F:YLNK]CAT
Next
NBTEX=I

Return

