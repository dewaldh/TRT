$EXEBOUT
Local Char    SAVACT(GLONACT)
Local Integer FLGEXE
SAVACT = GACTION
Case BOUT
 When "A"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = [M]PLICRD(nolign-1)
  PARBOUT(2) = "PPL"
  PARBOUT(3) = [M]PLI
  FLGEXE = 1
  GACTION = "GOBJETC"
  Call OBJET_CHAR(PARBOUT(1),PARBOUT(2),PARBOUT(3)) From GOBJET
  [M]PLICRD(nolign-1) = PARBOUT(1)
 When "B"
  FLGEXE = 1
  GACTION = "STD"
 When "C"
  FLGEXE = 1
  GACTION = "STD"
Endcase
GACTION = SAVACT
Return

