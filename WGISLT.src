NOMMSK(0) = "SLT0"         : ABMSK(0)  = "SLT0"     : AMA(0) = 1
NOMMSK(1) = "SLT1"         : ABMSK(1)  = "SLT1"     : AMA(1) = 1
NOMMSK(2) = "SLT2"         : ABMSK(2)  = "SLT2"     : AMA(2) = 1
