# Supervisor
# Mask management SELZON 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [28/08/2018]
A_HEURE = "00:11:54"
A_USER  = "ADMIN"
A_STAMP = "20180828001154"
Return

$TITRES
Return

$CHG_FMT
Case zoncou
 When "NBLIG"
  If [M]NBLIG=0
  Endif
Endcase
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask SELZON [DIA2]
Gosub HORODAT
Local Inpbox "SELZON" From GFONCTION At A_STAMP With A_WINDPREV Mask [DIA2] As [SIM_]
Grizo [DIA2]5
Grizo [DIA2]10
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [DIA2]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=32 : X2(0)=81 : Y1(0)=7 : Y2(0)=8
X1(1)=32 : X2(1)=81 : Y1(1)=9 : Y2(1)=21
Return

$ON_FICHIER
Onevent CONTROL Call C_FICHIER(zc) From W1SELZON
Onevent BEFORE_INPUT Call AS_FICHIER(zc) From W1SELZON
Onevent AFTER_CHANGE Gosub AMM_FICHIER From W1SELZON
Return

Subprog IB_FICHIER(VALEUR)
Variable Char    VALEUR()
## Action STD
Call IB_FICHIER From SELZON
Gosub _AFF
End

Subprog AS_FICHIER(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(13602,GBOUT2) From OBJDIV
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Call IB_FICHIER(VALEUR)
Onkey 130 Titled GBOUT2 Call B2_FICHIER(zc) From W1SELZON
Onkey   2 Titled GBOUTS Call S_FICHIER(zc) From W1SELZON
Onkey 144 Titled GBOUTP Call P_FICHIER(zc) From W1SELZON
Onkey 146 Titled GBOUTA Call SA_FICHIER(zc) From W1SELZON
Gosub _AFF
End

Subprog C_FICHIER(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "FICHIER" : GZNUM = 1176 : Endif
If !mkstat
 ## Action %CNTOBJ
 Call CONTSEL("ATB","",VALEUR,"",mkstat) From CONTOBJ
 If mkstat : GERR = 1 : GZONE = "FICHIER" : GZNUM = 1176 : Endif
Endif
Gosub _AFF
End

$AMM_FICHIER
Call AM_FICHIER(zc)
If !mkstat & GOBJET
 zoncou = "FICHIER" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_FICHIER(VALEUR)
Variable Char    VALEUR()
If !mkstat & evalue("dim("+clanam([M])+"ZFICHIER)")>indice
 [M]FICHIER(indice) = VALEUR
 Affzo ZFICHIER(indice)
Endif
Gosub _AFF
End

Subprog S_FICHIER(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "ATB"
PARMSK(2) = ""
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog B2_FICHIER(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELZON
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELZON"
 Call S_LIS_CHAR(VALEUR,PARMSK,"SELZON","SELZON","") From GACTION
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog SA_FICHIER(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "ATB"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_FICHIER(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("ATB",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZFICHIER
Onevent BEFORE_AREA Gosub AV_ZFICHIER From W1SELZON
Return

$AV_ZFICHIER
If clalev([F:ATB])=0 : Local File ATABLE [ATB] : Endif
Call LECTURE("ATB",[M]FICHIER(indice),"") From CONTOBJ
Call TEXTE([F:ATB]INTITFIC,zc) From OBJDIV
Gosub _AFF
Return

$ON_NBLIG
Onevent BEFORE_INPUT Call AS_NBLIG From W1SELZON
Return

Subprog IB_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call IB_NBLIG From SELZON
Endif
Gosub _AFF
End

Subprog AS_NBLIG
Local Decimal BASPAG
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(16134,GBOUT2) From OBJDIV
Call TEXTE(16134,GBOUT3) From OBJDIV
Call IB_NBLIG
Onkey 130 Titled GBOUT2 Call B2_NBLIG From W1SELZON
Onkey 131 Titled GBOUT3 Call B3_NBLIG From W1SELZON
Gosub _AFF
End

Subprog B2_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call B2_NBLIG From SELZON
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

Subprog B3_NBLIG
Local Decimal BASPAG
If !GWEBSERV
 ## Action STD
 Call B3_NBLIG From SELZON
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_SELECT
Onevent INIT_AREA Call D_SELECT(zc) From W1SELZON
Onevent BEFORE_INPUT Call AS_SELECT(zc) From W1SELZON
Return

Subprog D_SELECT(VALEUR)
Variable Integer VALEUR
If varinit([M]SELECT,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_SELECT(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

$CHG_STY
Return


