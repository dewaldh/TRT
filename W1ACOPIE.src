Call AV_DOSORG(zc) From ACOPIE
Gosub _AFF
Return

Subprog AS_DOSORG(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
## Action STD
Call AS_DOSORG(VALEUR) From ACOPIE
If mkstat=2
 [M]DOSORG(INDIC) = VALEUR
 Affzo DOSORG(INDIC) : mkstat = 2
Endif
Onkey   2 Titled GBOUTS Call S_DOSORG(zc) From W1ACOPIE
Gosub _AFF
End

Subprog C_DOSORG(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
If !mkstat
 ## Action CONTDOS
 Call C_DOSSIER(VALEUR) From DOSCONT
 If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
 If !mkstat
  ## Action ACCESDOS
  Call CTL_DROIT_DOSSIER(VALEUR,"L") From DOSCONT
  If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
 Endif
Endif
Gosub _AFF
End

$AMM_DOSORG
Call AM_DOSORG(zc)
If !mkstat & GOBJET
 zoncou = "DOSORG" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_DOSORG(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action APASSWD
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "APASSWD"
 PARMSK(1) = VALEUR
 PARMSK(2) = ""
 Call SAISIE_CHAR(VALEUR,PARMSK,"APASSWD","APASSWD","SPEPASSWD") From GSAISIE
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
Endif
If !mkstat
 ## Action STD
 Call AM_DOSORG(VALEUR) From ACOPIE
 If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
Endif
Gosub _AFF
End

Subprog S_DOSORG(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELADS
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELADS"
 Call S_LIS_CHAR(VALEUR,PARMSK,"SELADS","SUBADS","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

