Subprog AS_DOSDES(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15082,GBOUT2) From OBJDIV
Call TEXTE(15597,GBOUTS) From OBJDIV
Call IB_DOSDES(VALEUR)
## Action STD
Call AS_DOSDES(VALEUR) From ACOPIE
If mkstat=2
 [M]DOSDES(INDIC) = VALEUR
 Affzo DOSDES(INDIC) : mkstat = 2
Endif
Onkey 130 Titled GBOUT2 Call B2_DOSDES(zc) From W1ACOPIE
Onkey   2 Titled GBOUTS Call S_DOSDES(zc) From W1ACOPIE
Gosub _AFF
End

Subprog C_DOSDES(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "DOSDES" : GZNUM = 1091 : Endif
If !mkstat
 ## Action CONTDOS
 Call C_DOSSIER(VALEUR) From DOSCONT
 If mkstat : GERR = 1 : GZONE = "DOSDES" : GZNUM = 1091 : Endif
 If !mkstat
  ## Action ACCESDOS
  Call CTL_DROIT_DOSSIER(VALEUR,"E") From DOSCONT
  If mkstat : GERR = 1 : GZONE = "DOSDES" : GZNUM = 1091 : Endif
  If !mkstat
   ## Action STD
   Call C_DOSDES(VALEUR) From ACOPIE
   If mkstat : GERR = 1 : GZONE = "DOSDES" : GZNUM = 1091 : Endif
  Endif
 Endif
Endif
Gosub _AFF
End

