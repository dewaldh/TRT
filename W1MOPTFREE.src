#<AdxTL>@(#)0.0.0.0 $Revision$
# Sage X3 supervisor
# Mask management MOPTFREE 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [26/03/2018]
A_HEURE = "12:53:39"
A_USER  = "ADMIN"
A_STAMP = "20180326125339"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask MOPTFREE [MOPF]
Gosub HORODAT
Local Inpbox "MOPTFREE" From GFONCTION At A_STAMP With A_WINDPREV Mask [MOPF] As [SIM_]
Grizo [MOPF]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [MOPF]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=27 : X2(0)=86 : Y1(0)=13 : Y2(0)=15
Return

$ON_MFGFCY
Onevent CONTROL Call C_MFGFCY(zc) From W1MOPTFREE
Onevent AFTER_CHANGE Gosub AMM_MFGFCY From W1MOPTFREE
Onevent BEFORE_INPUT Call AS_MFGFCY(zc) From W1MOPTFREE
Onevent INIT_AREA Call D_MFGFCY(zc) From W1MOPTFREE
Return

Subprog D_MFGFCY(VALEUR)
Variable Char    VALEUR()
If varinit([M]MFGFCY,indice)=0
 VALEUR = GFCYDEF(8)
Endif
Gosub _AFF
End

Subprog AS_MFGFCY(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(1427,GBOUT1) From OBJDIV
Call TEXTE(8255,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey 129 Titled GBOUT1 Call B1_MFGFCY(zc) From W1MOPTFREE
Onkey   2 Titled GBOUTS Call S_MFGFCY(zc) From W1MOPTFREE
Onkey 144 Titled GBOUTP Call P_MFGFCY(zc) From W1MOPTFREE
Onkey 146 Titled GBOUTA Call SA_MFGFCY(zc) From W1MOPTFREE
Gosub _AFF
End

Subprog C_MFGFCY(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "MFGFCY" : GZNUM = 9144 : Endif
If !mkstat
 ## Action ACONTFCY
 Call CONTSITE(VALEUR) From SUBAGF
 If mkstat : GERR = 1 : GZONE = "MFGFCY" : GZNUM = 9144 : Endif
 If !mkstat
  ## Action %CNTOBJ
  Call CONTSEL("FCY","E",VALEUR,"",mkstat) From CONTOBJ
  If mkstat : GERR = 1 : GZONE = "MFGFCY" : GZNUM = 9144 : Endif
  If !mkstat
   ## Action CONTFCY
   Call CONTFCY(VALEUR) From EXEFNC
   If mkstat : GERR = 1 : GZONE = "MFGFCY" : GZNUM = 9144 : Endif
  Endif
 Endif
Endif
Gosub _AFF
End

$AMM_MFGFCY
Call AM_MFGFCY(zc)
If !mkstat & GOBJET
 zoncou = "MFGFCY" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_MFGFCY(VALEUR)
Variable Char    VALEUR()
## Action STD
Call AM_MFGFCY(VALEUR) From OPTFREE
If mkstat : GERR = 1 : GZONE = "MFGFCY" : GZNUM = 9144 : Endif
If !mkstat & evalue("dim("+clanam([M])+"ZMFGFCY)")>indice
 [M]MFGFCY(indice) = VALEUR
 Affzo ZMFGFCY(indice)
Endif
Gosub _AFF
End

Subprog S_MFGFCY(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "FCY"
PARMSK(2) = "E"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog B1_MFGFCY(VALEUR)
Variable Char    VALEUR()
Call OBJET("FCY",VALEUR,"") From GOBJET
Gosub _AFF
End

Subprog SA_MFGFCY(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "FCY"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_MFGFCY(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("FCY",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZMFGFCY
Onevent BEFORE_AREA Gosub AV_ZMFGFCY From W1MOPTFREE
Return

$AV_ZMFGFCY
If clalev([F:FCY])=0 : Local File FACILITY [FCY] : Endif
Call LECTURE("FCY",num$([M]MFGFCY(indice)),"") From CONTOBJ
zc = [F:FCY]FCYNAM
Gosub _AFF
Return

$ON_USR
Onevent CONTROL Call C_USR(zc) From W1MOPTFREE
Onevent BEFORE_INPUT Call AS_USR(zc) From W1MOPTFREE
Onevent AFTER_CHANGE Gosub AMM_USR From W1MOPTFREE
Onevent INIT_AREA Call D_USR(zc) From W1MOPTFREE
Return

Subprog D_USR(VALEUR)
Variable Char    VALEUR()
If varinit([M]USR,indice)=0
 VALEUR = GUSER
Endif
Gosub _AFF
End

Subprog AS_USR(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(485,GBOUT1) From OBJDIV
Call TEXTE(8255,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey 129 Titled GBOUT1 Call B1_USR(zc) From W1MOPTFREE
Onkey   2 Titled GBOUTS Call S_USR(zc) From W1MOPTFREE
Onkey 144 Titled GBOUTP Call P_USR(zc) From W1MOPTFREE
Onkey 146 Titled GBOUTA Call SA_USR(zc) From W1MOPTFREE
Gosub _AFF
End

Subprog C_USR(VALEUR)
Variable Char    VALEUR()
## Action %CNTOBJ
Call CONTSEL("AUS","!",VALEUR,"",mkstat) From CONTOBJ
If mkstat : GERR = 1 : GZONE = "USR" : GZNUM = 1259 : Endif
Gosub _AFF
End

$AMM_USR
Call AM_USR(zc)
If !mkstat & GOBJET
 zoncou = "USR" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_USR(VALEUR)
Variable Char    VALEUR()
If !mkstat & evalue("dim("+clanam([M])+"ZUSR)")>indice
 [M]USR(indice) = VALEUR
 Affzo ZUSR(indice)
Endif
Gosub _AFF
End

Subprog S_USR(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "AUS"
PARMSK(2) = "!"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog B1_USR(VALEUR)
Variable Char    VALEUR()
Call OBJET("AUS",VALEUR,"") From GOBJET
Gosub _AFF
End

Subprog SA_USR(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "AUS"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_USR(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("AUS",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZUSR
Onevent BEFORE_AREA Gosub AV_ZUSR From W1MOPTFREE
Return

$AV_ZUSR
Call LECTEXTRA(zc,"AUTILIS","INTUSR",num$([M]USR(indice)),"") From ATEXTRA
Gosub _AFF
Return

$CHG_STY
Return


