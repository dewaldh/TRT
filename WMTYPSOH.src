# Supervisor
## ATY-ATYPE ## SOH
# 2018-08-27 12:48:02 285

Funprog ACTRLREF(AINSTANCE,APRONAME,AVALUE,SOHNUM,AFILTER)
Variable Instance AINSTANCE Using OBJECT
Value Char APRONAME
Variable Char AVALUE
Value Char SOHNUM
Value Char AFILTER

Local Integer ASTATUS

If find(AINSTANCE.ACTX.AFOLDER,nomap,"")>0
 Local File SORDER [SOH]
Else
 Local File =AINSTANCE.ACTX.AFOLDER+".SORDER" [SOH]
Endif

Default File [F:SOH]
Read [F:SOH]SOH0 = [L]SOHNUM
If fstat : # Record does not exist
 [L]ASTATUS = fmet AINSTANCE.ASETERROR(APRONAME,num$([L]SOHNUM)-":"-mess(23,100,1),[V]CST_AERROR): End [L]ASTATUS
Endif

Local Integer ATSTFILTER
Local Char     AMESFILTER(250)
Case [L]AFILTER
 When "A"
  [L]ATSTFILTER = ([F:SOH]SOHCAT <> 4) : [L]AMESFILTER= func ASYRFNC.TEXTE(6540)
 When "B"
  [L]ATSTFILTER = ([F:SOH]ORDSTA  <>  2) : [L]AMESFILTER= func ASYRFNC.TEXTE(12661)
 When "C"
  [L]ATSTFILTER = ([F:SOH]INVSTA = 1) : [L]AMESFILTER= func ASYRFNC.TEXTE(13709)
 When "D"
  [L]ATSTFILTER = (find([F:SOH]DLVSTA,1,2)<>0) : [L]AMESFILTER= func ASYRFNC.TEXTE(23916)
 When "E"
  [L]ATSTFILTER = ([F:SOH]APPFLG>2) : [L]AMESFILTER= func ASYRFNC.TEXTE(42263)
 When "F"
  [L]ATSTFILTER = ([F:SOH]HLDSTA=2) : [L]AMESFILTER= func ASYRFNC.TEXTE(50689)
 When "G"
  [L]ATSTFILTER = ([F:SOH]SOHCAT<>4 and [F:SOH]ORDSTA=1 and [F:SOH]UNL=[V]CST_ANO) : [L]AMESFILTER= func ASYRFNC.TEXTE(0)
 When "H"
  [L]ATSTFILTER = (([F:SOH]SOHCAT=1 | [F:SOH]SOHCAT=2 | [F:SOH]SOHCAT=3)  & [F:SOH]ORDSTA=1 & [F:SOH]UNL=[V]CST_ANO) : [L]AMESFILTER= func ASYRFNC.TEXTE(0)
 When "OPENORDER"
  [L]ATSTFILTER = ([F:SOH]SOHCAT = 4) : [L]AMESFILTER= func ASYRFNC.TEXTE(0)
 When Default
  [L]ATSTFILTER = 1 : [L]AMESFILTER=mess(23,100,1)
Endcase
If [L]ATSTFILTER=0 : # Record does not exist
 [L]ASTATUS = fmet AINSTANCE.ASETERROR(APRONAME,num$([L]SOHNUM)-":"-[L]AMESFILTER,[V]CST_AERROR): End [L]ASTATUS
Endif

End [V]CST_AOK


