# Supervisor
# Mask management CII0 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:54:27"
A_USER  = "ADMIN"
A_STAMP = "20180827235427"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask CII0 [CII]
Gosub HORODAT
Local Inpbox "CII0" From GFONCTION At A_STAMP With A_WINDPREV Mask [CII] As [SIM_]
Grizo [CII]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [CII]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=111 : Y1(0)=10 : Y2(0)=18
Return

$ON_CIGCOD
Onevent AFTER_CHANGE Gosub AMM_CIGCOD From W1CII0
Onevent BEFORE_INPUT Call AS_CIGCOD(zc) From W1CII0
Onevent CONTROL Call C_CIGCOD(zc) From W1CII0
Return

Subprog AS_CIGCOD(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_CIGCOD(zc) From W1CII0
Onkey 144 Titled GBOUTP Call P_CIGCOD(zc) From W1CII0
Onkey 146 Titled GBOUTA Call SA_CIGCOD(zc) From W1CII0
Gosub _AFF
End

Subprog C_CIGCOD(VALEUR)
Variable Char    VALEUR()
## Action %CNTOBJ
Call CONTSEL("CIG","!",VALEUR,"",mkstat) From CONTOBJ
If mkstat : GERR = 1 : GZONE = "CIGCOD" : GZNUM = 1371 : Endif
Gosub _AFF
End

$AMM_CIGCOD
Call AM_CIGCOD(zc)
If !mkstat & GOBJET
 zoncou = "CIGCOD" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_CIGCOD(VALEUR)
Variable Char    VALEUR()
## Action STD
Call AM_CIGCOD(VALEUR) From SUBCII
If mkstat : GERR = 1 : GZONE = "CIGCOD" : GZNUM = 1371 : Endif
If !mkstat & evalue("dim("+clanam([M])+"ZCIGCOD)")>indice
 [M]CIGCOD(indice) = VALEUR
 Affzo ZCIGCOD(indice)
Endif
Gosub _AFF
End

Subprog S_CIGCOD(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELCIG2
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELCIG2"
 Call S_LIS_CHAR(VALEUR,PARMSK,"SELCIG2","SUBCII","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

Subprog SA_CIGCOD(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "CIG"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_CIGCOD(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("CIG",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

