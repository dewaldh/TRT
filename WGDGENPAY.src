$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(14)
Local Integer A_RESULT
A_DATE  = [05/12/2018]
A_HEURE = "20:22:22"
A_USER  = "MB"
Call ISWINVALID(nomap,GLANGUE,"DGENPAY",0,A_STAMP,A_RESULT,1) From INTRUTILB
Return

$NAVIGMSK
