############################################################################################
### Subprog AUPDATE
############################################################################################
Subprog AUPDATE(PBDBPGRP,ASTATUS)
Variable Instance PBDBPGRP Using R_PBDBPGRP
Variable Integer ASTATUS

If PBDBPGRP = null : End : Endif

Gosub AVARIABLES From WMR00PBDBPGRP
If [L]ASTATUS>=[V]CST_AERROR : Goto AUPDATE_END : Endif

If fmet PBDBPGRP.ACTX.AGETAFCRIGHT(PBDBPGRP,"GESPBDECO",[V]CST_ATRUE)>=[V]CST_AERROR : [L]ASTATUS=[V]CST_AERROR : Goto AUPDATE_END : Endif
If fmet PBDBPGRP.ACTX.AGETAFCRIGHTU(PBDBPGRP,"GESPBDECO",[L]A_STRSITE,[V]CST_ATRUE)>=[V]CST_AERROR
 [L]ASTATUS=[V]CST_AERROR : Goto AUPDATE_END
Endif

Gosub AREPCONTROL_AUPDATE
If [L]ASTATUS>=[V]CST_AERROR : Goto AUPDATE_END : Endif

If !adxlog
 Gosub AUPDATE_TR_PBDBPGRP
Else
 Gosub AUPDATE_PBDBPGRP
Endif
If [L]ASTATUS>=[V]CST_AERROR : Gosub AUPDATE_END : Return : Endif

Gosub _AUPDATE_AFTER
[L]A_I = PBDBPGRP.freeSnapshot
PBDBPGRP.snapshotEnabled = 1
$AUPDATE_END
End

#-----------------------------------------------------#
$AREPCONTROL_AUPDATE
PBDBPGRP.ASTALIN = [V]CST_AUPD
PBDBPGRP.PBDBPG.ASTALIN = [V]CST_AUPD
[L]A_ASTALIN = PBDBPGRP.ASTALIN
[L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_CONTROL_BEFORE"))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

Gosub AUPDATE_CONTROL
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

[L]A_ASTALIN = PBDBPGRP.ASTALIN
[L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_CONTROL_AFTER"))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Return


$AUPDATE_CONTROL
Gosub _AUPDATE_CONTROL_BEFORE
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
# Control mandatory
[L]ASTATUS =  max([L]ASTATUS,fmet PBDBPGRP._AMANDATORY)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

# Control format
[L]ASTATUS =  max([L]ASTATUS,fmet PBDBPGRP._AFORMAT)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

# Control other
[L]ASTATUS =  max([L]ASTATUS,fmet PBDBPGRP._AOTHERS)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Gosub _AUPDATE_CONTROL_AFTER
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Return

#-----------------------------------------------------#
$_AUPDATE_CONTROL_BEFORE
If PBDBPGRP.PBDBPG.ASTALIN = [V]CST_ANEWDEL : Return : Endif
PBDBPGRP.PBDBPG.ASTALIN = [V]CST_AUPD
If [V]CST_ASTALIN(PBDBPGRP.PBDBPG.ASTALIN)<>""
 [L]A_ASTALIN = PBDBPGRP.PBDBPG.ASTALIN
 [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_CONTROL_BEFORE"))
 If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Endif
For A_N2=1 To maxtab(PBDBPGRP.PBDBPG.PBDBPGRPD) : # PBDBPGRPD -- 2
 If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2) <> null
& and PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN<>[V]CST_ANEWDEL
  If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN<>[V]CST_ANEW & PBDBPGRP.PBDBPG.ASTALIN=[V]CST_ADEL
   PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN = [V]CST_ADEL
  Endif
  If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN=[V]CST_ANEW & find(PBDBPGRP.PBDBPG.ASTALIN,[V]CST_ADEL,[V]CST_ANEWDEL)>0
   PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN = [V]CST_ANEWDEL
  Endif
  If [V]CST_ASTALIN(PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN)<>""
   Case [V]CST_ASTALIN(PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN)
    When [V]CST_APRGAINSERT  : [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._AINSERT_CONTROL_BEFORE)
    When [V]CST_APRGAUPDATE : [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._AUPDATE_CONTROL_BEFORE)
    When [V]CST_APRGADELETE  : [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._ADELETE_CONTROL_BEFORE)
   Endcase
   If [L]ASTATUS>=[V]CST_AERROR : Break  : Endif
  Endif
 Endif
Next A_N2
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

Return

#-----------------------------------------------------#
$_AUPDATE_CONTROL_AFTER
For A_N2=1 To maxtab(PBDBPGRP.PBDBPG.PBDBPGRPD) : # PBDBPGRPD -- 2
 If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2) <> null
& and PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN<>[V]CST_ANEWDEL
  If [V]CST_ASTALIN(PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN)<>""
   Case [V]CST_ASTALIN(PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN)
    When [V]CST_APRGAINSERT  : [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._AINSERT_CONTROL_AFTER)
    When [V]CST_APRGAUPDATE : [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._AUPDATE_CONTROL_AFTER)
    When [V]CST_APRGADELETE  : [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._ADELETE_CONTROL_AFTER)
   Endcase
   If [L]ASTATUS>=[V]CST_AERROR : Break  : Endif
  Endif
 Endif
Next A_N2
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

If [V]CST_ASTALIN(PBDBPGRP.PBDBPG.ASTALIN)<>""
 [L]A_ASTALIN = PBDBPGRP.PBDBPG.ASTALIN
 [L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_CONTROL_AFTER"))
 If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Endif
Return

#-----------------------------------------------------#
$AUPDATE_TR_PBDBPGRP
Trbegin [F:PBDBPG]
 Gosub AUPDATE_PBDBPGRP
 If [L]ASTATUS>=[V]CST_AERROR : Gosub AUPDATE_ABORT : Return : Endif
Commit
Return

#-----------------------------------------------------#
$_AUPDATE_AFTER
If find(PBDBPGRP.PBDBPG.ASTALIN,[V]CST_ADEL,[V]CST_ANEWDEL,[V]CST_ALL)=0
 PBDBPGRP.PBDBPG.ASTALIN = [V]CST_ALL
Endif
Local Integer ASTATUS2
For A_N2=1 To maxtab(PBDBPGRP.PBDBPG.PBDBPGRPD)
 If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2) <> null
  [L]ASTATUS2 = fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._AUPDATE_AFTER
  If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN=[V]CST_ADEL or PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN=[V]CST_ANEWDEL
   FreeInstance PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)
   PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2) = null
  Endif
  [L]ASTATUS = max([L]ASTATUS2,[L]ASTATUS)
 Endif
Next A_N2
Return

#-----------------------------------------------------#
$AUPDATE_PBDBPGRP
[L]A_ASTALIN = PBDBPGRP.ASTALIN
[L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_BEFORE"))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

[L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.PBDBPG._AUPDATE)
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif

[L]A_ASTALIN = PBDBPGRP.ASTALIN
[L]ASTATUS = max([L]ASTATUS,fmet PBDBPGRP.ACTION([V]CST_ASTALIN([L]A_ASTALIN)+"_AFTER"))
If [L]ASTATUS>=[V]CST_AERROR : Return : Endif
Return

#-----------------------------------------------------#
$AUPDATE_ABORT
Rollback
$_AUPDATE_ABORT
If PBDBPGRP.snapshotEnabled=1
 [L]A_RETIK = PBDBPGRP.revertUpdTick
Endif
Local Integer ASTATUS2
For A_N2=1 To maxtab(PBDBPGRP.PBDBPG.PBDBPGRPD)
 If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2) <> null
  [L]ASTATUS2 = fmet PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)._AUPDATE_ABORT
  If PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN=[V]CST_ADEL or PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2).ASTALIN=[V]CST_ANEWDEL
   FreeInstance PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2)
   PBDBPGRP.PBDBPG.PBDBPGRPD(A_N2) = null
  Endif
  [L]ASTATUS = max([L]ASTATUS2,[L]ASTATUS)
 Endif
Next A_N2

[L]ASTATUS = max(fmet PBDBPGRP.ACTION("AUPDATE_ABORT"),[L]ASTATUS)
Return
#-----------------------------------------------------#



