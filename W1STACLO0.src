# Supervisor
# Mask management STACLO0 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [28/08/2018]
A_HEURE = "00:14:36"
A_USER  = "ADMIN"
A_STAMP = "20180828001436"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask STACLO0 [STC0]
Gosub HORODAT
Local Inpbox "STACLO0" From GFONCTION At A_STAMP With A_WINDPREV Mask [STC0] As [SIM_]
Grizo [STC0]5
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [STC0]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=1 : X2(0)=88 : Y1(0)=1 : Y2(0)=4
Return

$ON_CPY
Onevent CONTROL Call C_CPY(zc) From W1STACLO0
Onevent AFTER_CHANGE Gosub AMM_CPY From W1STACLO0
Onevent BEFORE_INPUT Call AS_CPY(zc) From W1STACLO0
Return

Subprog AS_CPY(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_CPY(zc) From W1STACLO0
Onkey 144 Titled GBOUTP Call P_CPY(zc) From W1STACLO0
Onkey 146 Titled GBOUTA Call SA_CPY(zc) From W1STACLO0
Gosub _AFF
End

Subprog C_CPY(VALEUR)
Variable Char    VALEUR()
## Action ACONTCPY
Call CONTSOC(VALEUR) From SUBAGF
If mkstat : GERR = 1 : GZONE = "CPY" : GZNUM = 1343 : Endif
If !mkstat
 ## Action %CNTOBJ
 Call CONTSEL("CPY","!",VALEUR,"",mkstat) From CONTOBJ
 If mkstat : GERR = 1 : GZONE = "CPY" : GZNUM = 1343 : Endif
Endif
Gosub _AFF
End

$AMM_CPY
Call AM_CPY(zc)
If !mkstat & GOBJET
 zoncou = "CPY" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_CPY(VALEUR)
Variable Char    VALEUR()
## Action STD
Call AM_CPY(VALEUR) From SAISTACLO
If mkstat : GERR = 1 : GZONE = "CPY" : GZNUM = 1343 : Endif
If !mkstat & evalue("dim("+clanam([M])+"ZCPY)")>indice
 [M]CPY(indice) = VALEUR
 Affzo ZCPY(indice)
Endif
Gosub _AFF
End

Subprog S_CPY(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "CPY"
PARMSK(2) = "!"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog SA_CPY(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "CPY"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_CPY(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("CPY",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZCPY
Onevent BEFORE_AREA Gosub AV_ZCPY From W1STACLO0
Return

$AV_ZCPY
If clalev([F:CPY])=0 : Local File COMPANY [CPY] : Endif
Call LECTURE("CPY",num$([M]CPY(indice)),"") From CONTOBJ
zc = [F:CPY]CPYNAM
Gosub _AFF
Return

$ON_CNX
Onevent BEFORE_INPUT Call AS_CNX(zc) From W1STACLO0
Onevent AFTER_CHANGE Gosub AMM_CNX From W1STACLO0
Onevent INIT_AREA Call D_CNX(zc) From W1STACLO0
Onevent CONTROL Call C_CNX(zc) From W1STACLO0
Return

Subprog D_CNX(VALEUR)
Variable Integer VALEUR
If varinit([M]CNX,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_CNX(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
Call INICOMBO(3100) From COMBOS
## Action STD
Call AS_CNX(VALEUR) From SAISTACLO
If mkstat=2
 [M]CNX(INDIC) = VALEUR
 Affzo CNX(INDIC) : mkstat = 2
Endif
If VALEUR<1 | GMENLOC(VALEUR)=1
 VALEUR = find(0,GMENLOC(1..len(mess(0,3100,1))))
Endif
If !mkstat
 Discombo 0 From CNX(INDIC)
 If sum(GMENLOC)<>0
  Gosub COMBOS From COMBOS
  For WI=1 to WN : Discombo WCOMBO(WI) From CNX(INDIC) : Next WI
 Endif
Endif
Gosub _AFF
End

Subprog C_CNX(VALEUR)
Variable Integer VALEUR
If VALEUR>0 & VALEUR<dim(GMENLOC) & GMENLOC(VALEUR)<>0
 mkstat = 1 : End
Endif
Gosub _AFF
End

$AMM_CNX
Call AM_CNX(zc)
If !mkstat & GOBJET
 zoncou = "CNX" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_CNX(VALEUR)
Variable Integer VALEUR
## Action STD
Call AM_CNX(VALEUR) From SAISTACLO
If mkstat : GERR = 1 : GZONE = "CNX" : GZNUM = 22164 : Endif
Gosub _AFF
End

