# Supervisor
# Mask management CRITSMQ 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [27/08/2018]
A_HEURE = "23:58:54"
A_USER  = "ADMIN"
A_STAMP = "20180827235854"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask CRITSMQ [CSMQ]
Gosub HORODAT
Local Inpbox "CRITSMQ" From GFONCTION At A_STAMP With A_WINDPREV Mask [CSMQ] As [SIM_]
Grizo [CSMQ]5
Grizo [CSMQ]10
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [CSMQ]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=33 : X2(0)=80 : Y1(0)=12 : Y2(0)=15
X1(1)=33 : X2(1)=80 : Y1(1)=16 : Y2(1)=17
Return

$ON_MEMO
Return

$ON_VCRTYP
Onevent BEFORE_INPUT Call AS_VCRTYP(zc) From W1CRITSMQ
Onevent INIT_AREA Call D_VCRTYP(zc) From W1CRITSMQ
Onevent CONTROL Call C_VCRTYP(zc) From W1CRITSMQ
Return

Subprog D_VCRTYP(VALEUR)
Variable Integer VALEUR
If varinit([M]VCRTYP,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_VCRTYP(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
Call INICOMBO(725) From COMBOS
## Action STD
Call AS_VCRTYP(VALEUR) From CNSSMQSTD
If mkstat=2
 [M]VCRTYP(INDIC) = VALEUR
 Affzo VCRTYP(INDIC) : mkstat = 2
Endif
If VALEUR<1 | GMENLOC(VALEUR)=1
 VALEUR = find(0,GMENLOC(1..len(mess(0,725,1))))
Endif
If !mkstat
 Discombo 0 From VCRTYP(INDIC)
 If sum(GMENLOC)<>0
  Gosub COMBOS From COMBOS
  For WI=1 to WN : Discombo WCOMBO(WI) From VCRTYP(INDIC) : Next WI
 Endif
Endif
Gosub _AFF
End

Subprog C_VCRTYP(VALEUR)
Variable Integer VALEUR
If VALEUR>0 & VALEUR<dim(GMENLOC) & GMENLOC(VALEUR)<>0
 mkstat = 1 : End
Endif
Gosub _AFF
End

$ON_VCRNUM
Onevent CONTROL Call C_VCRNUM(zc) From W1CRITSMQ
Onevent BEFORE_INPUT Call AS_VCRNUM(zc) From W1CRITSMQ
Return

Subprog AS_VCRNUM(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(17970,GBOUT2) From OBJDIV
Onkey 130 Titled GBOUT2 Call B2_VCRNUM(zc) From W1CRITSMQ
Gosub _AFF
End

Subprog C_VCRNUM(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action CONTVCR
 Call CONTVCR(VALEUR) From TRTDIV
 If mkstat : GERR = 1 : GZONE = "VCRNUM" : GZNUM = 3170 : Endif
Endif
Gosub _AFF
End

Subprog B2_VCRNUM(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELVCR
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELVCR"
 PARMSK(1) = [M]VCRNUM
 PARMSK(2) = num$([M]VCRTYP-1)
 PARMSK(3) = [M]FCY
 Call S_TAB_CHAR(VALEUR,PARMSK,"SELVCR","SUBSLPB","") From GACTION
 [M]VCRNUM = PARMSK(1)
 GACTION = SAVACT
Endif
If mkstat=99 : mkstat = 0 : Elsif mkstat=0 : mkstat = 2 : Endif
Gosub _AFF
End

$ON_ECRAN
Onevent CONTROL Call C_ECRAN(zc) From W1CRITSMQ
Onevent BEFORE_INPUT Call AS_ECRAN(zc) From W1CRITSMQ
Onevent AFTER_CHANGE Gosub AMM_ECRAN From W1CRITSMQ
Return

Subprog AS_ECRAN(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(12426,GBOUT1) From OBJDIV
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey 129 Titled GBOUT1 Call B1_ECRAN(zc) From W1CRITSMQ
Onkey   2 Titled GBOUTS Call S_ECRAN(zc) From W1CRITSMQ
Onkey 144 Titled GBOUTP Call P_ECRAN(zc) From W1CRITSMQ
Onkey 146 Titled GBOUTA Call SA_ECRAN(zc) From W1CRITSMQ
Gosub _AFF
End

Subprog C_ECRAN(VALEUR)
Variable Char    VALEUR()
## Action %CNTOBJ
Call CONTSEL("GTC","!",VALEUR,"SMQ",mkstat) From CONTOBJ
If mkstat : GERR = 1 : GZONE = "ECRAN" : GZNUM = 46 : Endif
Gosub _AFF
End

$AMM_ECRAN
Call AM_ECRAN(zc)
If !mkstat & GOBJET
 zoncou = "ECRAN" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_ECRAN(VALEUR)
Variable Char    VALEUR()
If !mkstat & evalue("dim("+clanam([M])+"ZECRAN)")>indice
 [M]ECRAN(indice) = VALEUR
 Affzo ZECRAN(indice)
Endif
Gosub _AFF
End

Subprog S_ECRAN(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "GTC"
PARMSK(2) = "!"
PARMSK(3) = "SMQ"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog B1_ECRAN(VALEUR)
Variable Char    VALEUR()
Call OBJET("GTC",VALEUR,"SMQ") From GOBJET
Gosub _AFF
End

Subprog SA_ECRAN(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "GTC"
PARMSK(2) = "SMQ"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_ECRAN(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = "SMQ"
Call VISU("GTC",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_ZECRAN
Onevent BEFORE_AREA Gosub AV_ZECRAN From W1CRITSMQ
Return

$AV_ZECRAN
Call LECTEXTRA(zc,"GTABACC","INTIT","SMQ",num$([M]ECRAN(indice))) From ATEXTRA
Gosub _AFF
Return

$CHG_STY
Return


