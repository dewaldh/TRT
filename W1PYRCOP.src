# Supervisor
# Mask management PYRCOP 

$_AFF
If GIMPORT
 Gosub AFF From GSAISIE
Else
 If GMESSAGE <>""
  Gosub ERR From GSAISIE
 Else
  Raz GERR , GZNUM
 Endif
Endif
Return

$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(15)
A_DATE  = [28/08/2018]
A_HEURE = "00:10:16"
A_USER  = "ADMIN"
A_STAMP = "20180828001016"
Return

$TITRES
Return

$VISU
Local Integer A_REPONSE
Global Integer GPRE_VIEW
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Mask PYRCOP [PYC]
Gosub HORODAT
Local Inpbox "PYRCOP" From GFONCTION At A_STAMP With A_WINDPREV Mask [PYC] As [SIM_]
Grizo [PYC]10
Grizo [PYC]20
Boxact [SIM_]
Gosub TITRES
Boxinp [SIM_] Using A_REPONSE
Close Local Inpbox [SIM_]
Close Local Mask [PYC]
Kill GPRE_VIEW
Return

$HARDCOP
Local Integer X1(0..14),X2(0..14),Y1(0..14),Y2(0..14)
X1(0)=27 : X2(0)=86 : Y1(0)=12 : Y2(0)=14
X1(1)=27 : X2(1)=86 : Y1(1)=15 : Y2(1)=17
Return

$ON_DOSORG
Onevent CONTROL Call C_DOSORG(zc) From W1PYRCOP
Onevent AFTER_CHANGE Gosub AMM_DOSORG From W1PYRCOP
Onevent INIT_AREA Call D_DOSORG(zc) From W1PYRCOP
Onevent BEFORE_INPUT Call AS_DOSORG(zc) From W1PYRCOP
Return

Subprog D_DOSORG(VALEUR)
Variable Char    VALEUR()
If varinit([M]DOSORG,indice)=0
 ## Action STD
 Call D_DOSORG(VALEUR) From PYRCOP
Endif
Gosub _AFF
End

Subprog AS_DOSORG(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Onkey   2 Titled GBOUTS Call S_DOSORG(zc) From W1PYRCOP
Gosub _AFF
End

Subprog C_DOSORG(VALEUR)
Variable Char    VALEUR()
## Action CONTDOS
Call C_DOSSIER(VALEUR) From DOSCONT
If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
If !mkstat
 ## Action ACCESDOS
 Call CTL_DROIT_DOSSIER(VALEUR,"") From DOSCONT
 If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
 If !mkstat
  ## Action STD
  Call C_DOSORG(VALEUR) From PYRCOP
  If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
 Endif
Endif
Gosub _AFF
End

$AMM_DOSORG
Call AM_DOSORG(zc)
If !mkstat & GOBJET
 zoncou = "DOSORG" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_DOSORG(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action APASSWD
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "APASSWD"
 PARMSK(1) = VALEUR
 PARMSK(2) = ""
 Call SAISIE_CHAR(VALEUR,PARMSK,"APASSWD","APASSWD","SPEPASSWD") From GSAISIE
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "DOSORG" : GZNUM = 1090 : Endif
Endif
Gosub _AFF
End

Subprog S_DOSORG(VALEUR)
Variable Char    VALEUR()
If !GWEBSERV
 ## Action SELADS
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "SELADS"
 Call S_LIS_CHAR(VALEUR,PARMSK,"SELADS","SUBADS","") From GACTION
 GACTION = SAVACT
Endif
Gosub _AFF
End

