$ON_PYM
Onevent CONTROL Call C_PYM(zc) From W1PYRCOP
Onevent BEFORE_INPUT Call AS_PYM(zc) From W1PYRCOP
Return

Subprog AS_PYM(VALEUR)
Variable Char    VALEUR()
Local Integer INDIC : INDIC = indice
Raz mkstat
Call TEXTE(15597,GBOUTS) From OBJDIV
Call TEXTE(12276,GBOUTP) From OBJDIV
Call TEXTE(16134,GBOUTA) From OBJDIV
Onkey   2 Titled GBOUTS Call S_PYM(zc) From W1PYRCOP
Onkey 144 Titled GBOUTP Call P_PYM(zc) From W1PYRCOP
Onkey 146 Titled GBOUTA Call SA_PYM(zc) From W1PYRCOP
Gosub _AFF
End

Subprog C_PYM(VALEUR)
Variable Char    VALEUR()
## Action %OBLIG
If vireblc(VALEUR,2)=""
 mkstat = 1 : GMESSAGE = mess(10,123,1)
Endif
If mkstat : GERR = 1 : GZONE = "PYM" : GZNUM = 29484 : Endif
If !mkstat
 ## Action CONTOBJW
 Local Char    PARMSK(250)(1..20) , SAVACT(20)
 SAVACT = GACTION : GACTION = "CONTOBJW"
 PARMSK(1) = "GYM"
 Call S_AFF_CHAR(VALEUR,PARMSK,"CONTOBJW","CONTOBJ","") From GACTION
 GACTION = SAVACT
 If mkstat : GERR = 1 : GZONE = "PYM" : GZNUM = 29484 : Endif
 If !mkstat
  ## Action STD
  Call C_PYM(VALEUR) From PYRCOP
  If mkstat : GERR = 1 : GZONE = "PYM" : GZNUM = 29484 : Endif
 Endif
Endif
Gosub _AFF
End

Subprog S_PYM(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16)
PARMSK(1) = "GYM"
PARMSK(2) = "$"
Call S_TAB_CHAR(VALEUR,PARMSK,"SELOBJ","SELOBJ","") From GACTION
Gosub _AFF
End

Subprog SA_PYM(VALEUR)
Variable Char    VALEUR()
Local Char PARMSK(250)(1..16) , SAVACT(20)
SAVACT = GACTION : GACTION = "SELOBJAW"
PARMSK(1) = "GYM"
PARMSK(3) = "$"
Call SAISIE_CHAR(VALEUR,PARMSK,"DSELOBJAW","SELOBJAW","XWDSELOBJAW") From GSAISIE
GACTION = SAVACT
Gosub _AFF
End

Subprog P_PYM(VALEUR)
Variable Char    VALEUR()
Local Char PAROBJ(250)
PAROBJ = ""
Call VISU("GYM",VALEUR,PAROBJ) From SUBAOP
Gosub _AFF
End

$ON_DES
