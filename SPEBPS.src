$APRES_CRE

  #redirect
  If func AFNC.ACTIV("YSYSI")
    Gosub ACTION From YSYSEVENTS
  Endif
Return

#------------------------------------------------------------------------------------#
#Call integrations staging out method
#------------------------------------------------------------------------------------#
$APRES_MOD

  If func AFNC.ACTIV("YSYSI")
