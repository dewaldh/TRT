$SETBOUT

If [M:BPRS]YABNREQ = 2
CHMEN += "Er"
Endif
CHMEN += "Ek"
CHMEN += "El"

Gosub SET_BOUT_SPE From GSAISIE

Return

#------------------------------------------------------------------------------------#
