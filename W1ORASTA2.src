$ON_PROFLG
Onevent AFTER_CHANGE Gosub AMM_PROFLG From W1ORASTA2
Onevent INIT_AREA Call D_PROFLG(zc) From W1ORASTA2
Onevent BEFORE_INPUT Call AS_PROFLG(zc) From W1ORASTA2
Return

Subprog D_PROFLG(VALEUR)
Variable Integer VALEUR
If varinit([M]PROFLG,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

Subprog AS_PROFLG(VALEUR)
Variable Integer VALEUR
Local Integer INDIC : INDIC = indice
Raz mkstat
If VALEUR<1
 VALEUR = 1
Endif
Gosub _AFF
End

$AMM_PROFLG
Call AM_PROFLG(zc)
If !mkstat & GOBJET
 zoncou = "PROFLG" : Gosub APRES_MODIF From =GPROGRAMME
Endif
Return

Subprog AM_PROFLG(VALEUR)
Variable Integer VALEUR
## Action STD
Call AM_PROFLG(VALEUR) From ORASTA
If mkstat : GERR = 1 : GZONE = "PROFLG" : GZNUM = 29119 : Endif
Gosub _AFF
End

$ON_STTFLG
Onevent INIT_AREA Call D_STTFLG(zc) From W1ORASTA2
Return

Subprog D_STTFLG(VALEUR)
Variable Integer VALEUR
If varinit([M]STTFLG,indice)=0
 VALEUR = 1
Endif
Gosub _AFF
End

$ON_STTDAT
Onevent BEFORE_AREA Gosub AV_STTDAT From W1ORASTA2
Return

$AV_STTDAT
Chgfmt [M]STTDAT(indice) With "DPZ:"+GFMDAT
Gosub _AFF
Return

$CHG_STY
Return


