# Supervisor
# Mask management MRL2 

Subprog SAIMSK(IMPFIC,ACTION,IMPTRT)
Value Char IMPFIC
Value Char ACTION
Value Char IMPTRT

Gosub DEFVAR

####################################
## Bloc liste 1
####################################
IMPTBL = 0

## Zone NBRLIG
mkstat = 0
zoncou = "NBRLIG"
indice = 0
If varinit([M]NBRLIG,indice)=0
 [M]NBRLIG = 100
Endif
If varmode([M]NBRLIG,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "NBRLIG" : Gosub ACTION From =IMPTRT
 Endif
 If [M]NBRLIG=0
  mkstat = 1 : GMESSAGE = mess(10,123,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "NBRLIG" : GZNUM = 56 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
 If !mkstat
  If [M]NBRLIG<0
   mkstat = 1 : GMESSAGE = mess(180,141,1)
  Endif
  If mkstat : GERR = 1 : GZONE = "NBRLIG" : GZNUM = 56 : Endif
  Gosub AFF From GSAISIE
  If mkstat : End : Endif
 Endif
Endif

## Zone NBRCOL
mkstat = 0
zoncou = "NBRCOL"
indice = 0
If varinit([M]NBRCOL,indice)=0
 [M]NBRCOL = 3
Endif
If varmode([M]NBRCOL,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "NBRCOL" : Gosub ACTION From =IMPTRT
 Endif
 If [M]NBRCOL<0
  mkstat = 1 : GMESSAGE = mess(180,141,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "NBRCOL" : GZNUM = 14372 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
Endif

####################################
## Bloc tableau 2
####################################
IMPTBL = 1

## Zone NBRFLD
mkstat = 0
zoncou = "NBRFLD"
indice = 0
status = 1
zoncou = "NBRFLD"
If varmode([M]NBRFLD,indice)=0
 SAVACT = GACTION : GACTION = "STD"
 Call AS_NBRFLD From SUBMRL
 GACTION = SAVACT
 If mkstat=1 : Raz [M]NBRFLD : Endif
 If !mkstat
  IMPMOD = 0 : IMPZON = "NBRFLD" : Gosub ACTION From =IMPTRT
 Endif
 If !mkstat
  NBLIG = [M]NBRFLD
  For nolign=1 To NBLIG
   indice = nolign-1
   [M]NBRFLD = nolign
   status = 75
   Call SAI_NBRFLD(IMPFIC,ACTION,IMPTRT)
   If mkstat : Break : Endif
  Next nolign
  If mkstat : End : Endif
  indice = 0
 Endif
Endif

####################################
## Bloc liste 3
####################################
IMPTBL = 0

## Zone TRACE
mkstat = 0
zoncou = "TRACE"
indice = 0
IMPENT = [M]TRACE
If varinit([M]TRACE,indice)=0
 IMPENT = 1
Endif
If varmode([M]TRACE,indice)=0
 [M]TRACE(indice) = IMPENT
 If !mkstat
  IMPMOD = 0 : IMPZON = "TRACE" : Gosub ACTION From =IMPTRT
  IMPENT = [M]TRACE(indice)
 Endif
Endif
[M]TRACE = IMPENT

mkstat = 0

End

####################################
## Bloc tableau 2
####################################
Subprog SAI_NBRFLD(IMPFIC,ACTION,IMPTRT)
Value Char IMPFIC
Value Char ACTION
Value Char IMPTRT

Gosub DEFVAR

IMPTBL = 1

## Zone NBRFLD
mkstat = 0
zoncou = "NBRFLD"

## Zone DAC
mkstat = 0
zoncou = "DAC"
If varmode([M]DAC,indice)=0
 If !mkstat
  IMPMOD = 0 : IMPZON = "DAC" : Gosub ACTION From =IMPTRT
 Endif
 If [M]DAC(indice)<0
  mkstat = 1 : GMESSAGE = mess(180,141,1)
 Endif
 If mkstat : GERR = 1 : GZONE = "DAC" : GZNUM = 5626 : Endif
 Gosub AFF From GSAISIE
 If mkstat : End : Endif
Endif

## Zone NBRFLD
mkstat = 0
zoncou = "NBRFLD"

End

$DEFVAR
Local Integer I , J , K , XOK , NOL , IMPENT , IMPMOD , IMPTBL , NBLIG
Local Char    IMPMSK(GLONAMK) , IMPZON(GLONAVA) , NOMZONE(40)
Local Char    PROGSUB(GLONADC), PROGSPE(GLONADC), PROGSPV(GLONADC)
Local Char    PARAM(250)(1..20) , SAVACT(20)
Local Char    WCHAR(255)
Local Decimal WNUM
Local Date    WDATE
Local Clbfile WCLOB(9)

IMPMSK = "MRL2"
Return

