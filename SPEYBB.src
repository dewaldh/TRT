Subprog VAL_BP(BPTYP, BPR)
Variable Char BPTYP()
Variable Char BPR()
Local Char STAFLD(15)
Local Integer I : I = 0
Local Char REQUEST(255)(0..5)

  REQUEST(0) = "SELECT GAC.ACCSHO_0, GCOD.ACC_0"
  If BPTYP = "BPS" Then
    REQUEST(1) -= "From BPSUPPLIER BP"
    STAFLD = "ENAFLG_0"
  Endif
  If BPTYP = "BPC" Then
    REQUEST(1) -= "From BPCUSTOMER BP"
    STAFLD = "BPCSTA_0"
  Endif
  If BPTYP = "" Then
    GMESSAGE = "Control account does not exist for this BP"
    GOK = 0
    GERR = 1
    zonsui = "[M:YBB1]YBP(nolign-1)"
    End
  Endif
  REQUEST(2) -= "INNER JOIN GACCCODE GCOD ON BP.ACCCOD_0 = GCOD.ACCCOD_0"
  REQUEST(3) -= "INNER JOIN GACCOUNT GAC on GCOD.ACC_0 = GAC.ACC_0"
  REQUEST(4) -= "WHERE BP."+STAFLD+" = 2 AND BP."+BPTYP+"NUM_0 = '"+BPR+"' AND GCOD.COA_0 = '"+[M:YBB1]YCOA(nolign-1)+"'"

  For (Char ACCSHO, Char ACC) From "5" Sql REQUEST As [YLNK]
    I += 1
    If ACCSHO = "" or ACC = ""
      GMESSAGE = "Control account does not exist for this BP"
      GOK = 0
      GERR = 1
      zonsui = "[M:YBB1]YBP(nolign-1)"
      End
    Else
      [M:YBB1]YBAN(nolign-1) = ""
      [M:YBB1]YBP(nolign-1) = ACCSHO
      [M:YBB1]YACC(nolign-1) = ACC
      Affzo [M:YBB1]YBAN(nolign-1)
      Affzo [M:YBB1]YBP(nolign-1)
      Affzo [M:YBB1]YACC(nolign-1)
    Endif
  Next

End

