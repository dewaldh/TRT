$EXEBOUT
Local Char    SAVACT(GLONACT)
Local Integer FLGEXE
SAVACT = GACTION
Case BOUT
 When "3"
  Local Char VALBOUT(250) , PARBOUT(250)(1..20)
  PARBOUT(1) = [M:MFA1]MFGFCY
  PARBOUT(2) = "1"
  PARBOUT(3) = ""
  PARBOUT(4) = [M:MFA1]MFGNUM
  PARBOUT(5) = [00/00/0000]
  PARBOUT(6) = num$(15)
  PARBOUT(7) = num$(1)
  FLGEXE = 1
  GACTION = "CONSALL"
  Call CONSULT_CHAR(VALBOUT,"ALL",PARBOUT) From GCONSULT
Endcase
GACTION = SAVACT
Return

