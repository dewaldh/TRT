Funprog ACTRLREF(AINSTANCE,APRONAME,AVALUE,FCY,AFILTER)
Variable Instance AINSTANCE Using OBJECT
Value Char APRONAME
Variable Char AVALUE
Value Char FCY
Value Char AFILTER

Local Integer ASTATUS

If find(AINSTANCE.ACTX.AFOLDER,nomap,"")>0
 Local File FACILITY [FCY]
Else
 Local File =AINSTANCE.ACTX.AFOLDER+".FACILITY" [FCY]
Endif

Default File [F:FCY]
Read [F:FCY]FCY0 = [L]FCY
If fstat : # Record does not exist
 [L]ASTATUS = fmet AINSTANCE.ASETERROR(APRONAME,num$([L]FCY)-":"-mess(23,100,1),[V]CST_AERROR): End [L]ASTATUS
Endif

Local Integer ATSTFILTER
Local Char     AMESFILTER(250)
Case [L]AFILTER
 When "C"
  [L]ATSTFILTER = ([F:FCY]FINFLG=[V]CST_AYES) : [L]AMESFILTER= func ASYRFNC.TEXTE(4212)
 When "H"
  [L]ATSTFILTER = ([F:FCY]DADFLG=[V]CST_AYES) : [L]AMESFILTER= func ASYRFNC.TEXTE(25759)
 When "J"
  [L]ATSTFILTER = ([F:FCY]WRHFLG=[V]CST_AYES) : [L]AMESFILTER= func ASYRFNC.TEXTE(6656)
 When "P"
  [L]ATSTFILTER = ([F:FCY]PURFLG=[V]CST_AYES) : [L]AMESFILTER= func ASYRFNC.TEXTE(6636)
 When Default
  [L]ATSTFILTER = 1 : [L]AMESFILTER=mess(23,100,1)
Endcase
If [L]ATSTFILTER=0 : # Record does not exist
 [L]ASTATUS = fmet AINSTANCE.ASETERROR(APRONAME,num$([L]FCY)-":"-[L]AMESFILTER,[V]CST_AERROR): End [L]ASTATUS
Endif

End [V]CST_AOK


