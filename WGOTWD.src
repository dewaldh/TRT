$HORODAT
Local Date    A_DATE
Local Char    A_HEURE(10) , A_USER(10)
Local Char    A_STAMP(14)
Local Integer A_RESULT
A_DATE  = [28/08/2018]
A_HEURE = "00:44:56"
A_USER  = "ADMIN"
Call ISWINVALID(nomap,GLANGUE,"OTWD",0,A_STAMP,A_RESULT,1) From INTRUTILB
Return

$NAVIGMSK
Local Char NAVMSK(200)
NAVMSK="TWD1;"
Return

$OUVRE_BOITE
Gosub INIT_BOITE
Gosub DEF_BOITE
Gosub AFF_BOITE
Return

$INIT_BOITE
Local Char    OBJLIS(GLONAOB)(0..10), DESLIS(80)(0..10), BOX1(10)
Local Integer CHGLIS(0..10), BROLIS(0..10), TRELIS(0..10)
Local Char    SAIRAP(50)(1..16)
Local Integer DERLU , AFOLDEF
Local Char    ABRENA(GLONABR)
DERLU = 0
AFOLDEF = 1
ABRENA = ""
BOX1 = "GAU_CHE"
OBJLIS(0) = "TWD"
CHGLIS(0) = 2
BROLIS(0) = 2
TRELIS(0) = 1
DESLIS(0) = "TWD"
If clalev([M:TWD1])=0 : Local Mask TWD1 [TWD1] : Endif
Gosub TIT
nolign = 1
If clalev([F:AXX])=0 : Local file ATEXTRA [AXX] : Endif
If clalev([F:AX3])=0 : Local file ATEXTRA [AX3] : Endif
Link [TWD] With
& [AXX]AXX0="TABWEEDIA";"TWDDESAXX";GLANGUE;[F:TWD]TWD;"",
& [AX3]AXX0="TABWEEDIA";"TWDSHOAXX";GLANGUE;TWD;""
& As [TWD_]
Return

$DEF_BOITE
Gosub HORODAT From WGOTWD
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Inpbox "OTWD" From GFONCTION At A_STAMP With A_WINDPREV Mask [TWD1]
&  Listbox [TWD_] GAU_CHE
&   [L]SAIRAP(1) = [F:TWD]TWD Using "KT:3X" Titled TITSEL(1) ,
&   [L]SAIRAP(2) = [F:AXX]TEXTE Using "K:80X" Titled TITSEL(2)
& As [TWD1]
Titled [TWD1] TIT
Return

$VISU_BOITE
Gosub INIT_BOITE
Gosub HORODAT From WGOTWD
If dim(A_WINDPREV)<=0 : Local Char A_WINDPREV(30) : Endif
Local Inpbox "OTWD" From GFONCTION At A_STAMP With A_WINDPREV Mask [TWD1]
& As [TWD1]
Titled [TWD1] TIT
Gosub AFF_BOITE
Return

$AFF_BOITE
Boxact [TWD1] 
Return

$SAISIE_BOITE
Boxinp [TWD1] Using REPONSE
Return

$FERME_BOITE
Onerrgo RIEN
Close Local Inpbox [TWD1]
Onerrgo
Return

$RIEN
Resume

$TIT
Local Char TITLIS(30)
Call TEXTE(3514,TITLIS) From OBJDIV
Local Char TITSEL(30)(1..2)
Call TEXTE(1809,TITSEL(1)) From OBJDIV
Call TEXTE(8,TITSEL(2)) From OBJDIV
Local Char TIT(60) , TITTRN(60)
Call TEXTE(3514,TIT) From OBJDIV
If GPROGRAMME<>""
 If dim([L]ACTION)<0 : Local Char ACTION(20) : Endif
 [L]ACTION = "TITRE" : Gosub ACTION From =GPROGRAMME
Endif
Return

$REMPLIT_
Gosub SETCLE_
If dim(FILTREG)<=0 or FILTREG
 If CRITERE=""  : CRITERE  = "1=1" : Endif
 If FILTSUP=""  : FILTSUP  = "1=1" : Endif
 If FILROLE=""  : FILROLE  = "1=1" : Endif
 If FILSUITE="" : FILSUITE = "1=1" : Endif
 Filter [TWD_] Where evalue(CRITERE) & evalue(FILTSUP) & evalue(FILROLE) & evalue(FILSUITE)
&       Order With CLELISTE
Endif
GPOINT = "AV_FILLBOX" : Gosub ENTREE From EXEFNC
ACTION = "HINT" : Gosub ACTION From =GPROGRAMME
If HINTLIS(0)<>'' or NOHLIS(0)<>0
 Fillbox [TWD1] GAU_CHE Hint Key =HINTLIS(0)
Else
 Gosub CALNOHOBJ From GOBJET
 If A_NOH
  Fillbox [TWD1] GAU_CHE
 Else
  Fillbox [TWD1] GAU_CHE Hint Key =""
 Endif
Endif
GPOINT = "AP_FILLBOX" : Gosub ENTREE From EXEFNC
Filter [TWD_]
Return

$SETCLE_
Local Char    CLELISTE(250)
Local Integer INDLIS , SNSLIS , LENLIS, GAUTRELIS
INDLIS = 1
SNSLIS = 1
LENLIS = 1
GAUTRELIS = 1
CLELISTE = "TWD"
ACTION = "CLE_GAUCHE" : Gosub ACTION From =GPROGRAMME
Return

