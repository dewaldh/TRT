#################################################################################################
## Populate settlement rule type
$UPD_SETTLE_RUL_TYP
  # Populate some fields from Settlement Rule Type
  If !clalev([F:YSRT5])       :   Local File YSETRULTYP [YSRT5]   : Endif
  Read [F:YSRT5]YSRT0 = this.YSTR.YRULTYPCOD

    this.YCALTYP_R       = [F:YSRT5]YCALTYP
    this.YENTTYP_R       = [F:YSRT5]YENTTYP
    this.YJOU_R          = [F:YSRT5]YJOU
    this.YALWADJ_R       = [F:YSRT5]YALWADJ
    this.YSETPRC_R       = [F:YSRT5]YSETPRC
  If clalev([F:YSRT2])       :   Close Local File [YSRT5]   : Endif
Return

