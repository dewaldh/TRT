$ACTION
Case ACTION
  When Default
Endcase

Case GACTION
  When "YBBSELGTE"
    Gosub YBBSELGTE
Endcase
Return

######################################################################################
$YBBSELGTE
Local Integer I
Local Char TEXTE(255)(1..50,1..3)
Local Char TEX(25)(50)
Local Char REQUEST(255)(0..3)

I=0
TIT(1)="Entry Type"
TIT(2)="Description"
TIT(3)="Business Batch Flag"
CRITERE = "1=1"

REQUEST(0) = "SELECT TYP_0, DES_0, replace(YBUSBAT_0,2,'Yes') FROM GTYPACCENT WHERE YBUSBAT_0 = 2"


For (Char TYP(30), Char DES(100), Char BUSBAT) From "5" Sql REQUEST As [YLNK]
  I += 1
  TEX(I)     = [F:YLNK]TYP
  TEXTE(I,1) = [F:YLNK]TYP
  TEXTE(I,2) = [F:YLNK]DES
  TEXTE(I,3) = [F:YLNK]BUSBAT
  If TYP = "" : I = 0 : End : Endif
Next
NBTEX=I

If I = 0 Then
  GMESSAGE = mess(2,6254,1)
  GERR = 1
  mkstat = 2
Endif

Return

#------------------------------------------------------------------------------------#
#Check entered value (DEWAL)
#------------------------------------------------------------------------------------#
Subprog C_YENTTYP(VALEUR)
Variable Char    VALEUR()
Local Integer I
Local Char REQUEST(255)(0..3)

I=0

REQUEST = "SELECT TYP_0 FROM GTYPACCENT WHERE YBUSBAT_0 = 2 and TYP_0 = '"+VALEUR+"'"

For (Char TYP(30)) From "5" Sql REQUEST As [YLNK]
  I += 1
  If TYP = "" : I = 0 : End : Endif
Next
NBTEX=I

If I = 0 Then
  GMESSAGE = mess(3,6254,1)
  GERR = 1
  mkstat = 2
Endif

End

