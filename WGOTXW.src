  FLGEXE = 1
  GACTION = "TXSRCAL"
  Call TRAITE_CHAR(VALBOUT,PARBOUT,"","TXSCAL","",2,"XYTXSCAL") From GTRAITE
  [M:TXM0]LSTGRP = PARBOUT(1)
  [M:TXM0]TXSNAM = PARBOUT(2)
  [M:TXM0]VERSION = PARBOUT(3)
Endcase
GACTION = SAVACT
Return


